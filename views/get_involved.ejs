<%- include('partials/header', { user: user }) %>

    <div
        style="background-color: var(--col-blue); padding: 4rem 0; text-align: center; margin-bottom: 4rem; position: relative;">
        <h1 style="color: white; font-size: 3rem; letter-spacing: 2px; text-transform: uppercase;">Get Involved</h1>
        <div
            style="position: absolute; bottom: -10px; left: 0; width: 100%; height: 20px; background: white; clip-path: polygon(0 100%, 100% 100%, 100% 0, 0 100%);">
        </div>
    </div>

    <div class="container" style="margin-bottom: 6rem;">
        <div class="grid-3" style="gap: 3rem;">
            <!-- Enroll Card -->
            <div class="card"
                style="text-align: center; padding: 2rem; display: flex; flex-direction: column; height: 100%;">
                <div style="height: 200px; background-color: #eee; margin: -2rem -2rem 1.5rem -2rem; overflow: hidden;">
                    <img src="https://images.unsplash.com/photo-1529333166437-7750a6dd5a70?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                        alt="Enroll" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <h3 style="margin-bottom: 1rem;">Enroll a Student</h3>
                <p style="margin-bottom: 2rem; flex-grow: 1;">Join our programs to learn, grow, and lead. Open to all
                    students in the community.</p>
                <a href="/contact?type=enroll" class="btn">Enroll Now</a>
            </div>

            <!-- Volunteer Card -->
            <div class="card"
                style="text-align: center; padding: 2rem; display: flex; flex-direction: column; height: 100%;">
                <div style="height: 200px; background-color: #eee; margin: -2rem -2rem 1.5rem -2rem; overflow: hidden;">
                    <img src="https://images.unsplash.com/photo-1559027615-cd4628902d4a?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                        alt="Volunteer" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <h3 style="margin-bottom: 1rem;">Volunteer</h3>
                <p style="margin-bottom: 2rem; flex-grow: 1;">Share your time and talents. We need mentors, event staff,
                    and guest speakers.</p>
                <a href="/contact?type=volunteer" class="btn">Become a Mentor</a>
            </div>

            <!-- Sponsor Card -->
            <div class="card"
                style="text-align: center; padding: 2rem; display: flex; flex-direction: column; height: 100%;">
                <div style="height: 200px; background-color: #eee; margin: -2rem -2rem 1.5rem -2rem; overflow: hidden;">
                    <img src="https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                        alt="Sponsor" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <h3 style="margin-bottom: 1rem;">Sponsor</h3>
                <p style="margin-bottom: 2rem; flex-grow: 1;">Support our mission financially. Your donations make our
                    programs possible.</p>
                <a href="/donations/add" class="btn">Donate Today</a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>