<%- include('../partials/header', { user: user }) %>

    <div class="container" style="margin-top: 4rem; margin-bottom: 4rem;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <h1 style="color: var(--col-blue);">Milestone Templates</h1>
            <a href="/milestones/templates/add" class="btn" style="background-color: var(--col-green);">+ New
                Template</a>
        </div>

        <% if (templates && templates.length> 0) { %>
            <div class="grid-3">
                <% templates.forEach(template=> { %>
                    <div class="card">
                        <h3 style="color: var(--col-blue); margin-bottom: 0.5rem;">
                            <%= template.title %>
                        </h3>
                        <p style="color: #666; font-size: 0.9rem; margin-bottom: 1rem;">
                            <strong>Offset:</strong>
                            <%= template.days_from_start %> days from start
                        </p>
                        <p>
                            <%= template.description %>
                        </p>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <p>No templates found.</p>
                <% } %>
    </div>

    <%- include('../partials/footer') %>