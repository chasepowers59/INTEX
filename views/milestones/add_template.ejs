<%- include('../partials/header', { user: user }) %>

    <div class="container" style="margin-top: 4rem; margin-bottom: 4rem; max-width: 600px;">
        <h1 style="color: var(--col-blue); margin-bottom: 2rem;">Add Milestone Template</h1>

        <form action="/milestones/templates/add" method="POST" class="card">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="form-group">
                <label>Template Title</label>
                <input type="text" name="title" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Description</label>
                <textarea name="description" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <label>Days from Start (Default Offset)</label>
                <input type="number" name="days_from_start" class="form-control" value="0">
                <small style="color: #666;">Used to auto-calculate date when assigning to a participant.</small>
            </div>

            <button type="submit" class="btn" style="width: 100%;">Create Template</button>
        </form>
    </div>

    <%- include('../partials/footer') %>