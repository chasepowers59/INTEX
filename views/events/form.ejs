<%- include('../partials/header', { user: user }) %>

    <div class="container mt-4">
        <div class="card" style="max-width: 600px; margin: 0 auto;">
            <h1 class="mb-4">
                <%= event ? 'Edit' : 'Create' %> Event Instance
            </h1>

            <form action="<%= event ? '/events/edit/' + event.event_instance_id : '/events/add' %>" method="POST">

                <div class="form-group">
                    <label for="event_definition_id">Event Definition (Template)</label>
                    <select id="event_definition_id" name="event_definition_id" class="form-control" required>
                        <option value="">Select Definition...</option>
                        <% templates.forEach(t=> { %>
                            <option value="<%= t.event_definition_id %>" <%=event &&
                                event.event_definition_id===t.event_definition_id ? 'selected' : '' %>>
                                <%= t.event_name %> (<%= t.event_type %>)
                            </option>
                            <% }) %>
                    </select>
                    <small class="text-muted">Select the type of event this is.</small>
                </div>

                <h4 class="mb-3 mt-4">Schedule & Location</h4>
                <div class="grid-2" style="gap: 1rem;">
                    <div class="form-group">
                        <label for="event_date_time_start">Start Time</label>
                        <input type="datetime-local" id="event_date_time_start" name="event_date_time_start"
                            class="form-control" required
                            value="<%= event ? new Date(new Date(event.event_date_time_start).getTime() - (new Date().getTimezoneOffset() * 60000)).toISOString().slice(0, 16) : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="event_date_time_end">End Time</label>
                        <input type="datetime-local" id="event_date_time_end" name="event_date_time_end"
                            class="form-control" required
                            value="<%= event ? new Date(new Date(event.event_date_time_end).getTime() - (new Date().getTimezoneOffset() * 60000)).toISOString().slice(0, 16) : '' %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="event_location">Location</label>
                    <input type="text" id="event_location" name="event_location" class="form-control"
                        value="<%= event ? event.event_location : '' %>">
                </div>

                <div class="form-group">
                    <label for="event_capacity">Capacity</label>
                    <input type="number" id="event_capacity" name="event_capacity" class="form-control"
                        value="<%= event ? event.event_capacity : '' %>">
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn">Save Event</button>
                    <a href="/events" class="btn btn-dark">Cancel</a>
                </div>
            </form>

            <% if (event) { %>
                <form action="/events/delete/<%= event.event_instance_id %>" method="POST"
                    style="margin-top: 2rem; border-top: 1px solid #eee; padding-top: 1rem;">
                    <button type="submit" class="btn" style="background-color: #ff6b6b;"
                        onclick="return confirm('Are you sure you want to delete this event?');">Delete Event</button>
                </form>
                <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>