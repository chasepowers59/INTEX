<%- include('partials/header', { user: user }) %>

    <!-- Hero Section -->
    <div class="hero"
        style="background: var(--col-peach); position: relative; overflow: hidden; padding-top: 120px; padding-bottom: 6rem;">
        <div class="container text-center" style="position: relative; z-index: 2;">
            <h1 style="font-size: 4rem; color: var(--col-dark-gray); margin-bottom: 1rem;">Empowering Latina Youth</h1>
            <p style="font-size: 1.5rem; max-width: 700px; margin: 0 auto; color: var(--col-dark-gray);">
                Inspiring the next generation of leaders through heritage, education, and sisterhood.
            </p>
        </div>
        <!-- Decorative Circle -->
        <div
            style="position: absolute; top: -100px; right: -100px; width: 400px; height: 400px; background: rgba(255,255,255,0.3); border-radius: 50%;">
        </div>
        <div
            style="position: absolute; bottom: -50px; left: -50px; width: 200px; height: 200px; background: var(--col-blue); border-radius: 50%; opacity: 0.2;">
        </div>
