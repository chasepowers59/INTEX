<%- include('partials/header', { user: typeof user !=='undefined' ? user : null }) %>

    <div class="container py-5 text-center">
        <div class="mb-4">
            <i class="fas fa-exclamation-triangle fa-4x text-warning"></i>
        </div>
        <h1 class="display-4 fw-bold mb-3">Oops! Something went wrong.</h1>
        <p class="lead text-muted mb-4">
            <%= message || 'An unexpected error occurred.' %>
        </p>

        <% if (typeof error !=='undefined' && error.status) { %>
            <p class="text-danger">Error Code: <%= error.status %>
            </p>
            <% } %>

                <a href="/" class="btn btn-primary rounded-pill px-4">Return Home</a>
    </div>

    <%- include('partials/footer') %>