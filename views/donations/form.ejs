<%- include('../partials/header', { user: user }) %>

    <div class="container mt-4">
        <div class="card" style="max-width: 600px; margin: 0 auto;">
            <h1 class="mb-4">Record Donation</h1>

            <form action="/donations/add" method="POST">

                <div class="form-group">
                    <label for="participant_id">Participant (Optional)</label>
                    <select id="participant_id" name="participant_id" class="form-control">
                        <option value="">Select Participant (or leave blank for External)...</option>
                        <% participants.forEach(p=> { %>
                            <option value="<%= p.participant_id %>">
                                <%= p.participant_first_name %>
                                    <%= p.participant_last_name %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="grid-2" style="gap: 1rem;">
                    <div class="form-group">
                        <label for="donation_amount">Amount ($)</label>
                        <input type="number" step="0.01" id="donation_amount" name="donation_amount"
                            class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="donation_date">Date</label>
                        <input type="date" id="donation_date" name="donation_date" class="form-control" required>
                    </div>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn">Save Donation</button>
                    <a href="/donations" class="btn btn-dark">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>