    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Data from EJS (Safe Injection)
        let cityLabels = <%- JSON.stringify(cityLabels || []) %>;
        let cityData = <%- JSON.stringify(cityCounts || []) %>;
        let impactData = <%- JSON.stringify(attendanceData || [0, 0]) %>;
        let attendanceOverTime = <%- JSON.stringify(attendanceOverTime || []) %>;
        let satisfactionOverTime = <%- JSON.stringify(satisfactionOverTime || []) %>;
        let donationOverTime = <%- JSON.stringify(donationOverTime || []) %>;

        // Store chart instances for updating
        let attendanceChart = null;
        let satisfactionChart = null;
        let donationChart = null;
        let demographicsChart = null;
        let impactChart = null;

        // Helper function to format month labels
        function formatMonth(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
        }

        // Event Attendance Over Time Chart
        const ctxAttendance = document.getElementById('attendanceChart');
        if (ctxAttendance) {
            const attendanceLabels = attendanceOverTime.map(item => formatMonth(item.month));
            const attendanceCounts = attendanceOverTime.map(item => parseInt(item.count || 0));
            attendanceChart = new Chart(ctxAttendance.getContext('2d'), {
                type: 'line',
                data: {
                    labels: attendanceLabels,
                    datasets: [{
                        label: 'Registrations',
                        data: attendanceCounts,
                        borderColor: '#8DA9C4',
                        backgroundColor: 'rgba(141, 169, 196, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2, 4] }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // Satisfaction Trends Chart
        const ctxSatisfaction = document.getElementById('satisfactionChart');
        if (ctxSatisfaction) {
            const satisfactionLabels = satisfactionOverTime.map(item => formatMonth(item.month));
            const satisfactionScores = satisfactionOverTime.map(item => parseFloat(item.avg_score || 0).toFixed(1));
            satisfactionChart = new Chart(ctxSatisfaction.getContext('2d'), {
                type: 'line',
                data: {
                    labels: satisfactionLabels,
                    datasets: [{
                        label: 'Avg Satisfaction',
                        data: satisfactionScores,
                        borderColor: '#958EBF',
                        backgroundColor: 'rgba(149, 142, 191, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 5,
                            grid: { borderDash: [2, 4] }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // Donation Trends Chart
        const ctxDonation = document.getElementById('donationChart');
        if (ctxDonation) {
            // Filter out any future dates and ensure we only show actual data
            const now = new Date();
            const validDonationData = donationOverTime.filter(item => {
                if (!item.month) return false;
                const monthDate = new Date(item.month);
                // Only include months that are not in the future
                return monthDate <= now;
            });
            
            const donationLabels = validDonationData.map(item => formatMonth(item.month));
            const donationAmounts = validDonationData.map(item => parseFloat(item.total || 0));
            
            donationChart = new Chart(ctxDonation.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: donationLabels,
                    datasets: [{
                        label: 'Donations',
                        data: donationAmounts,
                        backgroundColor: '#EE969E',
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2, 4] },
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // Demographics Chart (Vertical Bar)
        const ctxDemographics = document.getElementById('demographicsChart');
        if (ctxDemographics) {
            demographicsChart = new Chart(ctxDemographics.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: cityLabels,
                    datasets: [{
                        label: 'Participants',
                        data: cityData,
                        backgroundColor: '#8DA9C4',
                        borderRadius: 5,
                        barThickness: 30
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2, 4] },
                            ticks: { stepSize: 1 }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // Impact Chart (Doughnut)
        const ctxImpact = document.getElementById('impactChart');
        if (ctxImpact) {
            impactChart = new Chart(ctxImpact.getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Attended', 'Missed'],
                    datasets: [{
                        data: impactData,
                        backgroundColor: ['#958EBF', '#FAD2D8'],
                        borderWidth: 0,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20, font: { family: "'Montserrat', sans-serif" } } }
                    }
                }
            });
        }

        // AJAX Filtering Implementation
        // Toast Notification Functions (global scope for onclick handler)
        window.showToast = function() {
            const toast = document.getElementById('toastNotification');
            console.log('showToast called, toast element:', toast);
            if (toast) {
                toast.classList.remove('fade-out');
                toast.classList.add('show');
                console.log('Toast should be visible now');
                
                // Auto-hide after 5 seconds
                setTimeout(() => {
                    window.hideToast();
                }, 5000);
            } else {
                console.error('Toast notification element not found!');
            }
        };

        window.hideToast = function() {
            const toast = document.getElementById('toastNotification');
            if (toast) {
                toast.classList.add('fade-out');
                setTimeout(() => {
                    toast.classList.remove('show', 'fade-out');
                }, 300);
            }
        };

        // Check if filters are active and totalParticipants count is 0
        function checkZeroResults(filters, totalParticipants) {
            // Check if any filters are active
            const hasFilters = filters && (
                (filters.city && filters.city !== '') ||
                (filters.eventType && filters.eventType !== '') ||
                (filters.milestoneCount && filters.milestoneCount !== '') ||
                (filters.ageRange && filters.ageRange !== '')
            );
            
            // Convert totalParticipants to number for comparison
            const totalParticipantsCount = parseInt(totalParticipants) || 0;
            
            // Debug logging
            console.log('checkZeroResults:', { hasFilters, totalParticipants, totalParticipantsCount, filters });
            
            // Show toast if filters are active and totalParticipants is 0
            if (hasFilters && totalParticipantsCount === 0) {
                console.log('Showing toast notification - filters active and totalParticipants is 0');
                window.showToast();
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const filterForm = document.querySelector('form[action="/admin/dashboard"]');
            const clearFiltersLink = document.querySelector('a[href="/admin/dashboard"]');
            
            // Check on initial page load
            <% if (typeof filters !== 'undefined' && typeof kpis !== 'undefined') { %>
            checkZeroResults(
                { 
                    city: '<%= filters && filters.city ? filters.city : "" %>',
                    eventType: '<%= filters && filters.eventType ? filters.eventType : "" %>',
                    milestoneCount: '<%= filters && filters.milestoneCount ? filters.milestoneCount : "" %>',
                    ageRange: '<%= filters && filters.ageRange ? filters.ageRange : "" %>'
                },
                <%= kpis.totalParticipants || 0 %>
            );
            <% } %>
            
            // Store initial scroll position
            let scrollPosition = 0;
            
            // Intercept form submission
            if (filterForm) {
                filterForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    // Save current scroll position
                    scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
                    
                    // Get form data
                    const formData = new FormData(filterForm);
                    const params = new URLSearchParams(formData);
                    
                    // Show loading indicator
                    const submitBtn = filterForm.querySelector('button[type="submit"]');
                    const originalText = submitBtn.textContent;
                    submitBtn.disabled = true;
                    submitBtn.textContent = 'Loading...';
                    
                    try {
                        // Fetch filtered data
                        const response = await fetch(`/admin/dashboard/data?${params.toString()}`);
                        if (!response.ok) {
                            throw new Error('Failed to fetch dashboard data');
                        }
                        const data = await response.json();
                        
                        // Update KPI values
                        updateKPIs(data.kpis);
                        
                        // Check for zero results after filter update
                        console.log('AJAX response data:', data);
                        checkZeroResults(data.filters || {}, data.kpis?.totalParticipants || 0);
                        
                        // Update charts
                        updateCharts(data);
                        
                        // Update filter indicators
                        updateFilterIndicators(data.filters);
                        
                        // Update URL without page refresh
                        const newUrl = `/admin/dashboard?${params.toString()}`;
                        window.history.pushState({ path: newUrl }, '', newUrl);
                        
                        // Restore scroll position
                        window.scrollTo(0, scrollPosition);
                        
                    } catch (error) {
                        console.error('Error fetching dashboard data:', error);
                        alert('Error loading filtered data. Please try again.');
                    } finally {
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    }
                });
            }
            
            // Handle clear filters link
            if (clearFiltersLink) {
                clearFiltersLink.addEventListener('click', async function(e) {
                    e.preventDefault();
                    scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
                    
                    try {
                        const response = await fetch('/admin/dashboard/data');
                        if (!response.ok) {
                            throw new Error('Failed to fetch dashboard data');
                        }
                        const data = await response.json();
                        
                        updateKPIs(data.kpis);
                        updateCharts(data);
                        updateFilterIndicators({});
                        
                        // Reset form
                        if (filterForm) {
                            filterForm.reset();
                        }
                        
                        window.history.pushState({ path: '/admin/dashboard' }, '', '/admin/dashboard');
                        window.scrollTo(0, scrollPosition);
                    } catch (error) {
                        console.error('Error clearing filters:', error);
                        window.location.href = '/admin/dashboard';
                    }
                });
            }
            
            // Function to update KPI values
            function updateKPIs(kpis) {
                // Update each KPI card by finding the title and updating the value
                const kpiCards = document.querySelectorAll('.kpi-item');
                kpiCards.forEach(card => {
                    const titleElement = card.querySelector('.kpi-item-title');
                    const valueElement = card.querySelector('.kpi-item-value');
                    if (titleElement && valueElement) {
                        const title = titleElement.textContent.trim();
                        let newValue = '';
                        
                        switch(title) {
                            case 'Total Participants':
                                newValue = kpis.totalParticipants;
                                break;
                            case 'Average Satisfaction':
                                // This KPI has "/5" suffix, so we need to update the innerHTML
                                valueElement.innerHTML = `${kpis.satisfactionScore}<span style="font-size: 1.2rem; color: #999;">/5</span>`;
                                return; // Skip the textContent update below
                            case 'Total Milestones':
                                newValue = kpis.milestoneCount;
                                break;
                            case 'Total Donations':
                                // This KPI has a different font size, preserve the style
                                valueElement.style.fontSize = '2rem';
                                newValue = `$${parseFloat(kpis.totalDonations || 0).toLocaleString('en-US', {minimumFractionDigits: 0, maximumFractionDigits: 0})}`;
                                break;
                            case 'Attendance Rate':
                                newValue = `${kpis.attendanceRate}%`;
                                break;
                            case 'Most Recent Event Registrations':
                                newValue = kpis.activeRegistrations;
                                break;
                            case 'New Users':
                                newValue = kpis.newUsers || 0;
                                break;
                        }
                        
                        if (newValue !== '') {
                            valueElement.textContent = newValue;
                        }
                    }
                });
            }
            
            // Function to update charts
            function updateCharts(data) {
                // Update attendance chart
                if (attendanceChart && data.attendanceOverTime && Array.isArray(data.attendanceOverTime)) {
                    const attendanceLabels = data.attendanceOverTime.map(item => formatMonth(item.month)).filter(label => label);
                    const attendanceCounts = data.attendanceOverTime.map(item => parseInt(item.count || 0));
                    if (attendanceLabels.length > 0) {
                        attendanceChart.data.labels = attendanceLabels;
                        attendanceChart.data.datasets[0].data = attendanceCounts;
                        attendanceChart.update('none'); // 'none' mode for smoother update
                    }
                }
                
                // Update satisfaction chart
                if (satisfactionChart && data.satisfactionOverTime && Array.isArray(data.satisfactionOverTime)) {
                    const satisfactionLabels = data.satisfactionOverTime.map(item => formatMonth(item.month)).filter(label => label);
                    const satisfactionScores = data.satisfactionOverTime.map(item => parseFloat(item.avg_score || 0));
                    if (satisfactionLabels.length > 0) {
                        satisfactionChart.data.labels = satisfactionLabels;
                        satisfactionChart.data.datasets[0].data = satisfactionScores;
                        satisfactionChart.update('none');
                    }
                }
                
                // Update donation chart
                if (donationChart && data.donationOverTime && Array.isArray(data.donationOverTime)) {
                    const now = new Date();
                    const validDonationData = data.donationOverTime.filter(item => {
                        if (!item.month) return false;
                        const monthDate = new Date(item.month);
                        return monthDate <= now;
                    });
                    const donationLabels = validDonationData.map(item => formatMonth(item.month)).filter(label => label);
                    const donationAmounts = validDonationData.map(item => parseFloat(item.total || 0));
                    if (donationLabels.length > 0) {
                        donationChart.data.labels = donationLabels;
                        donationChart.data.datasets[0].data = donationAmounts;
                        donationChart.update('none');
                    }
                }
                
                // Update demographics chart
                if (demographicsChart && data.cityLabels && data.cityCounts && Array.isArray(data.cityLabels) && Array.isArray(data.cityCounts)) {
