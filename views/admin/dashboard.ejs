<%- include('../partials/header', { user: user }) %>

    <div class="container py-5">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h1 class="display-5 fw-bold text-dark mb-0" style="font-family: 'DM Serif Display', serif;">Admin
                    Dashboard</h1>
                <p class="text-muted mb-0" style="font-family: 'Montserrat', sans-serif;">Overview of system performance
                    and management.</p>
            </div>
            <div class="text-end">
                <span class="badge bg-light text-dark border p-2 rounded-pill">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <%= new Date().toLocaleDateString() %>
                </span>
            </div>
        </div>

        <!-- Management Quick Links (Top Row) -->
        <div class="row g-3 mb-5">
            <% const modules=[ { name: 'Users' , icon: 'users' , color: 'primary' , link: '/admin/users' }, {
                name: 'Participants' , icon: 'user-graduate' , color: 'success' , link: '/admin/participants' }, {
                name: 'Events' , icon: 'calendar-alt' , color: 'warning' , link: '/admin/events' }, { name: 'Surveys' ,
                icon: 'poll' , color: 'info' , link: '/admin/surveys' }, { name: 'Milestones' , icon: 'flag' ,
                color: 'danger' , link: '/admin/milestones' }, { name: 'Donations' , icon: 'donate' , color: 'secondary'
                , link: '/admin/donations' } ]; %>
                <% modules.forEach(mod=> { %>
                    <div class="col-6 col-md-2">
                        <a href="<%= mod.link %>" class="text-decoration-none">
                            <div class="card h-100 border-0 shadow-sm hover-lift text-center py-3"
                                style="border-radius: 15px; transition: transform 0.2s;">
                                <div class="card-body p-2">
                                    <div class="icon-box mb-2 text-<%= mod.color %>">
                                        <i class="fas fa-<%= mod.icon %> fa-lg"></i>
                                    </div>
                                    <h6 class="card-title mb-0 text-dark fw-bold"
                                        style="font-size: 0.75rem; font-family: 'Montserrat', sans-serif;">
                                        <%= mod.name %>
                                    </h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }); %>
        </div>

        <!-- KPI Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100"
                    style="border-radius: 20px; background-color: #958EBF; color: white;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75"
                                    style="font-size: 0.8rem; letter-spacing: 1px;">Total Participants</h6>
                                <h2 class="display-4 fw-bold mb-0">
                                    <%= kpis.totalParticipants %>
                                </h2>
                            </div>
                            <div class="icon-bg opacity-25">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100"
                    style="border-radius: 20px; background-color: #8DA9C4; color: white;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75"
                                    style="font-size: 0.8rem; letter-spacing: 1px;">Avg Satisfaction</h6>
                                <h2 class="display-4 fw-bold mb-0">
                                    <%= kpis.satisfactionScore %>
                                </h2>
                            </div>
                            <div class="icon-bg opacity-25">
                                <i class="fas fa-smile fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100"
                    style="border-radius: 20px; background-color: #EE969E; color: white;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75"
                                    style="font-size: 0.8rem; letter-spacing: 1px;">Milestones</h6>
                                <h2 class="display-4 fw-bold mb-0">
                                    <%= kpis.milestoneCount %>
                                </h2>
                            </div>
                            <div class="icon-bg opacity-25">
                                <i class="fas fa-trophy fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row g-4">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 20px;">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h5 class="fw-bold mb-0" style="font-family: 'DM Serif Display', serif;">Participant
                            Demographics</h5>
                    </div>
                    <div class="card-body px-4 pb-4">
                        <div style="height: 300px; position: relative;">
                            <canvas id="demographicsChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 20px;">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h5 class="fw-bold mb-0" style="font-family: 'DM Serif Display', serif;">Program Impact</h5>
                    </div>
                    <div class="card-body px-4 pb-4">
                        <div style="height: 300px; position: relative;">
                            <canvas id="impactChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Data from EJS (Safe Injection)
        const cityLabels = <%- JSON.stringify(cityLabels || []) %>;
        const cityData = <%- JSON.stringify(cityCounts || []) %>;
        const impactData = <%- JSON.stringify(attendanceData || [0, 0]) %>;

        console.log('Chart Data:', { cityLabels, cityData, impactData });

        // Demographics Chart (Vertical Bar)
        const ctxDemographics = document.getElementById('demographicsChart').getContext('2d');
        new Chart(ctxDemographics, {
            type: 'bar',
            data: {
                labels: cityLabels,
                datasets: [{
                    label: 'Participants',
                    data: cityData,
                    backgroundColor: '#8DA9C4', // Brand Blue
                    borderRadius: 5,
                    barThickness: 30
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    title: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [2, 4] },
                        ticks: { stepSize: 1 }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // Impact Chart (Doughnut)
        const ctxImpact = document.getElementById('impactChart').getContext('2d');
        new Chart(ctxImpact, {
            type: 'doughnut',
            data: {
                labels: ['Attended', 'Missed'],
                datasets: [{
                    data: impactData,
                    backgroundColor: ['#958EBF', '#FAD2D8'], // Brand Lavender, Brand Pink
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20, font: { family: "'Montserrat', sans-serif" } } }
                }
            }
        });
    </script>

    <style>
        /* Brand Colors */
        :root {
            --brand-blue: #8DA9C4;
            --brand-lavender: #958EBF;
            --brand-pink: #FAD2D8;
            --brand-cream: #FDFBF7;
            --brand-coral: #EE969E;
        }

        body {
            background-color: var(--brand-cream);
        }

        .text-brand-blue {
            color: var(--brand-blue) !important;
        }

        .bg-brand-lavender {
            background-color: var(--brand-lavender) !important;
        }

        .bg-brand-pink {
            background-color: var(--brand-pink) !important;
        }

        .hover-lift:hover {
            transform: translateY(-5px) !important;
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        }
    </style>

    <%- include('../partials/footer') %>
