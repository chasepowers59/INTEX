<%- include('../partials/header', { user: user }) %>

    <div class="container py-5">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h1 class="display-5 fw-bold text-dark mb-0" style="font-family: 'DM Serif Display', serif;">Admin
                    Dashboard</h1>
                <p class="text-muted mb-0" style="font-family: 'Montserrat', sans-serif;">Overview of system performance
                    and management.</p>
            </div>
            <div class="text-end">
                <span class="badge bg-light text-dark border p-2 rounded-pill">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <%= new Date().toLocaleDateString() %>
                </span>
            </div>
        </div>

        <!-- Management Quick Links (Top Row) -->
        <div class="row g-3 mb-5">
            <% const modules=[ { name: 'Users' , icon: 'users' , color: 'primary' , link: '/admin/users' }, {
                name: 'Participants' , icon: 'user-graduate' , color: 'success' , link: '/admin/participants' }, {
                name: 'Events' , icon: 'calendar-alt' , color: 'warning' , link: '/admin/events' }, { name: 'Surveys' ,
                icon: 'poll' , color: 'info' , link: '/admin/surveys' }, { name: 'Milestones' , icon: 'flag' ,
                color: 'danger' , link: '/admin/milestones' }, { name: 'Donations' , icon: 'donate' , color: 'secondary'
                , link: '/admin/donations' } ]; %>
                <% modules.forEach(mod=> { %>
                    <div class="col-6 col-md-2">
                        <a href="<%= mod.link %>" class="text-decoration-none">
                            <div class="card h-100 border-0 shadow-sm hover-lift text-center py-3"
                                style="border-radius: 15px; transition: transform 0.2s;">
                                <div class="card-body p-2">
                                    <div class="icon-box mb-2 text-<%= mod.color %>">
                                        <i class="fas fa-<%= mod.icon %> fa-lg"></i>
                                    </div>
                                    <h6 class="card-title mb-0 text-dark fw-bold"
                                        style="font-size: 0.85rem; font-family: 'Montserrat', sans-serif;">
                                        <%= mod.name %>
                                    </h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }); %>
        </div>

        <!-- KPI Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100"
                    style="border-radius: 20px; background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); color: white;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75"
                                    style="font-size: 0.8rem; letter-spacing: 1px;">Total Participants</h6>
                                <h2 class="display-4 fw-bold mb-0">
                                    <%= kpis.totalParticipants %>
                                </h2>
                            </div>
                            <div class="icon-bg opacity-25">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100"
                    style="border-radius: 20px; background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75"
                                    style="font-size: 0.8rem; letter-spacing: 1px;">Avg Satisfaction</h6>
                                <h2 class="display-4 fw-bold mb-0">
                                    <%= kpis.satisfactionScore %>
                                </h2>
                            </div>
                            <div class="icon-bg opacity-25">
                                <i class="fas fa-smile fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100"
                    style="border-radius: 20px; background: linear-gradient(135deg, #FF416C 0%, #FF4B2B 100%); color: white;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75"
                                    style="font-size: 0.8rem; letter-spacing: 1px;">Milestones</h6>
                                <h2 class="display-4 fw-bold mb-0">
                                    <%= kpis.milestoneCount %>
                                </h2>
                            </div>
                            <div class="icon-bg opacity-25">
                                <i class="fas fa-trophy fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row g-4">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 20px;">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h5 class="fw-bold mb-0" style="font-family: 'DM Serif Display', serif;">Participant
                            Demographics</h5>
                    </div>
                    <div class="card-body px-4 pb-4">
                        <canvas id="demographicsChart" height="250"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 20px;">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h5 class="fw-bold mb-0" style="font-family: 'DM Serif Display', serif;">Program Impact</h5>
                    </div>
                    <div class="card-body px-4 pb-4 d-flex align-items-center justify-content-center">
                        <div style="width: 100%; max-width: 300px;">
                            <canvas id="impactChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Data from EJS
        const cityData = <% - JSON.stringify(charts.city || []) %>;
        const attendanceCount = <%= kpis.attendanceCount || 0 %>;
        const totalParticipants = <%= kpis.totalParticipants || 0 %>;

        // Process City Data
        const cityLabels = cityData.map(c => c.participant_city || 'Unknown');
        const cityCounts = cityData.map(c => c.count);

        // Demographics Chart (Bar)
        const ctxDemographics = document.getElementById('demographicsChart').getContext('2d');
        new Chart(ctxDemographics, {
            type: 'bar',
            data: {
                labels: cityLabels,
                datasets: [{
                    label: 'Participants',
                    data: cityCounts,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    title: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [2, 4] }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // Impact Chart (Doughnut)
        const ctxImpact = document.getElementById('impactChart').getContext('2d');
        new Chart(ctxImpact, {
            type: 'doughnut',
            data: {
                labels: ['Attended', 'Inactive'],
                datasets: [{
                    data: [attendanceCount, Math.max(0, totalParticipants - attendanceCount)],
                    backgroundColor: ['#38ef7d', '#ff6b6b'],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                cutout: '70%',
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
                }
            }
        });
    </script>

    <style>
        .hover-lift:hover {
            transform: translateY(-5px) !important;
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        }
    </style>

    <%- include('../partials/footer') %>