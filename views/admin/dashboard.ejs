<%- include('../partials/header', { user: user }) %>

    <style>
        /* Dashboard Background - Cream */
        body {
            background-color: #F9F5EA;
            padding-bottom: 3rem;
        }

        /* Brand Colors */
        :root {
            --brand-blue: #8DA9C4;
            --brand-lavender: #958EBF;
            --brand-pink: #FAD2D8;
            --brand-cream: #FDFBF7;
            --brand-coral: #EE969E;
            --brand-peach: #FFD1C7;
        }

        .text-brand-blue {
            color: var(--brand-blue) !important;
        }

        .bg-brand-lavender {
            background-color: var(--brand-lavender) !important;
        }

        .bg-brand-pink {
            background-color: var(--brand-pink) !important;
        }

        .hover-lift:hover {
            transform: translateY(-5px) !important;
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        }

        .kpi-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none !important;
        }

        .kpi-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, .2) !important;
        }

        /* Section Title */
        .section-title {
            font-family: 'DM Serif Display', serif;
            font-size: 2rem;
            color: #2C2C2C;
            margin-bottom: 2rem;
            position: relative;
            padding-bottom: 1rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, var(--brand-blue), var(--brand-lavender));
            border-radius: 2px;
        }

        /* Improved Header */
        .dashboard-header {
            background: white;
            border-radius: 20px;
            padding: 2rem 2.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .dashboard-header h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .dashboard-header p {
            font-size: 1.1rem;
            color: #666;
        }

        .date-badge {
            background: linear-gradient(135deg, var(--brand-blue), var(--brand-lavender));
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            box-shadow: 0 3px 10px rgba(141, 169, 196, 0.3);
        }

        /* Quick Actions - Improved */
        .quick-actions {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .quick-actions .row {
            display: flex;
            flex-wrap: wrap;
            margin-left: -0.75rem;
            margin-right: -0.75rem;
        }

        .quick-actions .row > [class*="col-"] {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        .quick-action-card {
            transition: all 0.3s ease;
            border: 2px solid transparent;
            background: #f9f9f9;
        }

        .quick-action-card:hover {
            border-color: var(--brand-blue);
            background: white;
            transform: translateY(-3px);
        }

        .quick-action-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 0.75rem;
            font-size: 1.5rem;
        }

        /* Modern KPI Cards - Large and Clear */
        .kpi-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2.5rem;
        }

        .kpi-item {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border: 2px solid transparent;
            position: relative;
            overflow: hidden;
        }

        .kpi-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--brand-blue), var(--brand-lavender));
        }

        .kpi-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            border-color: var(--brand-blue);
        }

        .kpi-item-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .kpi-item-title {
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #666;
            font-family: 'Montserrat', sans-serif;
        }

        .kpi-item-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
            background: linear-gradient(135deg, var(--brand-blue), var(--brand-lavender));
            box-shadow: 0 3px 10px rgba(141, 169, 196, 0.3);
        }

        .kpi-item-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2C2C2C;
            margin: 1rem 0;
            font-family: 'DM Serif Display', serif;
            line-height: 1.2;
        }

        .kpi-item-link {
            font-size: 0.9rem;
            color: var(--brand-blue);
            text-decoration: none;
            margin-top: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            font-family: 'Montserrat', sans-serif;
            transition: all 0.2s;
        }

        .kpi-item-link:hover {
            color: var(--brand-lavender);
            gap: 0.75rem;
        }

        /* Color variants with gradient backgrounds */
        .kpi-item.purple .kpi-item-icon { 
            background: linear-gradient(135deg, #958EBF, #7A6FA8);
        }
        .kpi-item.blue .kpi-item-icon { 
            background: linear-gradient(135deg, #8DA9C4, #6B8FA8);
        }
        .kpi-item.pink .kpi-item-icon { 
            background: linear-gradient(135deg, #EE969E, #D87A84);
        }
        .kpi-item.light-pink .kpi-item-icon { 
            background: linear-gradient(135deg, #FAD2D8, #F5B8C2);
        }
        .kpi-item.green .kpi-item-icon { 
            background: linear-gradient(135deg, #28a745, #218838);
        }

        /* Section Spacing */
        .dashboard-section {
            margin-bottom: 2rem;
        }

        .section-card {
            border-radius: 20px;
            border: none;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .section-card-header {
            background: white;
            border: none;
            padding: 1.5rem 2rem;
            border-bottom: 2px solid #f0f0f0;
        }

        .section-card-body {
            padding: 2rem;
        }
    </style>

    <div class="container py-4">
        <!-- Improved Header -->
        <div class="dashboard-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="fw-bold text-dark mb-2" style="font-family: 'DM Serif Display', serif; font-size: 2.5rem;">Admin Dashboard</h1>
                    <p class="text-muted mb-0" style="font-family: 'Montserrat', sans-serif; font-size: 1.1rem;">Overview of system performance and management.</p>
                </div>
                <div class="text-end">
                    <div class="date-badge">
                        <i class="fas fa-calendar-alt me-2"></i>
                        <span style="font-weight: 600;">Today's Date:</span>
                        <span class="ms-2"><%= new Date().toLocaleDateString() %></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 1. Quick Actions Navigation (Top Row) -->
        <div class="quick-actions">
            <h5 class="fw-bold mb-3" style="font-family: 'DM Serif Display', serif; color: var(--col-dark-gray);">Quick Actions</h5>
            <div class="row g-3" style="flex-wrap: wrap;">
                <% const modules=[ 
                    { name: 'Users' , icon: 'users' , color: '#8DA9C4' , link: '/admin/users' }, 
                    { name: 'Participants' , icon: 'user-graduate' , color: '#958EBF' , link: '/admin/participants' }, 
                    { name: 'Events' , icon: 'calendar-alt' , color: '#EE969E' , link: '/admin/events' }, 
                    { name: 'Surveys' , icon: 'poll' , color: '#FAD2D8' , link: '/admin/surveys' }, 
                    { name: 'Milestones' , icon: 'flag' , color: '#8DA9C4' , link: '/admin/milestones' }, 
                    { name: 'Donations' , icon: 'donate' , color: '#958EBF' , link: '/admin/donations' } 
                ]; %>
                <% modules.forEach(mod=> { %>
                    <div class="col-6 col-sm-4 col-md-4 col-lg-2" style="min-width: 0; flex: 0 0 auto;">
                        <a href="<%= mod.link %>" class="text-decoration-none">
                            <div class="card h-100 quick-action-card text-center py-3"
                                style="border-radius: 15px; background: #f9f9f9;">
                                <div class="card-body p-2">
                                    <div class="quick-action-icon" style="background: <%= mod.color %>; color: white;">
                                        <i class="fas fa-<%= mod.icon %>"></i>
                                    </div>
                                    <h6 class="card-title mb-0 text-dark fw-bold"
                                        style="font-size: 0.85rem; font-family: 'Montserrat', sans-serif;">
                                        <%= mod.name %>
                                    </h6>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- 2. Key Performance Indicators - Large Clear Cards -->
        <div class="dashboard-section">
            <h2 class="section-title mb-4" style="font-family: 'DM Serif Display', serif; font-size: 2rem; color: #2C2C2C; text-align: center;">
                Key Performance Indicators
            </h2>
            <div class="kpi-grid">
                <!-- Total Participants -->
                <div class="kpi-item purple">
                    <div class="kpi-item-header">
                        <span class="kpi-item-title">Total Participants</span>
                        <div class="kpi-item-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="kpi-item-value"><%= kpis.totalParticipants %></div>
                    <p style="color: #999; font-size: 0.9rem; margin: 0.5rem 0 0 0; font-family: 'Montserrat', sans-serif;">
                        <% if (filters && (filters.city || filters.role || filters.eventType)) { %>
                            Participants matching current filters
                        <% } else { %>
                            Total registered participants in the system
                        <% } %>
                    </p>
                    <a href="/admin/participants" class="kpi-item-link">
                        View All Participants <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <!-- Avg Satisfaction -->
                <div class="kpi-item blue">
                    <div class="kpi-item-header">
                        <span class="kpi-item-title">Average Satisfaction</span>
                        <div class="kpi-item-icon">
                            <i class="fas fa-smile"></i>
                        </div>
                    </div>
                    <div class="kpi-item-value"><%= kpis.satisfactionScore %><span style="font-size: 1.2rem; color: #999;">/5</span></div>
                    <p style="color: #999; font-size: 0.9rem; margin: 0.5rem 0 0 0; font-family: 'Montserrat', sans-serif;">
                        <% if (filters && (filters.city || filters.role || filters.eventType)) { %>
                            Average satisfaction (filtered surveys)
                        <% } else { %>
                            Average satisfaction score from all surveys
                        <% } %>
                    </p>
                    <a href="/admin/surveys" class="kpi-item-link">
                        View All Surveys <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <!-- Milestones -->
                <div class="kpi-item pink">
                    <div class="kpi-item-header">
                        <span class="kpi-item-title">Education Milestones</span>
                        <div class="kpi-item-icon">
                            <i class="fas fa-trophy"></i>
                        </div>
                    </div>
                    <div class="kpi-item-value"><%= kpis.milestoneCount %></div>
                    <p style="color: #999; font-size: 0.9rem; margin: 0.5rem 0 0 0; font-family: 'Montserrat', sans-serif;">
                        <% if (filters && (filters.city || filters.role || filters.eventType)) { %>
                            Education milestones (filtered participants)
                        <% } else { %>
                            Total higher education achievements recorded
                        <% } %>
                    </p>
                    <a href="/admin/milestones" class="kpi-item-link">
                        View All Milestones <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <!-- Total Donations -->
                <div class="kpi-item green">
                    <div class="kpi-item-header">
                        <span class="kpi-item-title">Total Donations</span>
                        <div class="kpi-item-icon">
                            <i class="fas fa-donate"></i>
                        </div>
                    </div>
                    <div class="kpi-item-value" style="font-size: 2rem;">$<%= parseFloat(kpis.totalDonations || 0).toLocaleString('en-US', {minimumFractionDigits: 0, maximumFractionDigits: 0}) %></div>
                    <p style="color: #999; font-size: 0.9rem; margin: 0.5rem 0 0 0; font-family: 'Montserrat', sans-serif;">
                        <% if (filters && (filters.city || filters.role || filters.eventType)) { %>
                            Donations from filtered participants only
                        <% } else { %>
                            Total funds raised to date (all donations)
                        <% } %>
                    </p>
                    <a href="/admin/donations" class="kpi-item-link">
                        View All Donations <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <!-- Attendance Rate -->
                <div class="kpi-item blue">
                    <div class="kpi-item-header">
                        <span class="kpi-item-title">Attendance Rate</span>
                        <div class="kpi-item-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                    <div class="kpi-item-value"><%= kpis.attendanceRate || 0 %>%</div>
                    <p style="color: #999; font-size: 0.9rem; margin: 0.5rem 0 0 0; font-family: 'Montserrat', sans-serif;">
                        <% if (filters && (filters.city || filters.role || filters.eventType)) { %>
                            Attendance rate for filtered registrations
                        <% } else { %>
                            Overall attendance rate (attended / registered)
                        <% } %>
                    </p>
                    <a href="/admin/events" class="kpi-item-link">
                        View All Events <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <!-- Active Registrations -->
                <div class="kpi-item purple">
                    <div class="kpi-item-header">
                        <span class="kpi-item-title">Active Registrations</span>
                        <div class="kpi-item-icon">
                            <i class="fas fa-user-check"></i>
                        </div>
                    </div>
                    <div class="kpi-item-value"><%= kpis.activeRegistrations || 0 %></div>
                    <p style="color: #999; font-size: 0.9rem; margin: 0.5rem 0 0 0; font-family: 'Montserrat', sans-serif;">
                        <% if (filters && (filters.city || filters.role || filters.eventType)) { %>
                            Upcoming registrations (filtered)
                        <% } else { %>
                            Total upcoming event registrations
                        <% } %>
                    </p>
                    <a href="/admin/participants" class="kpi-item-link">
                        View All Participants <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- 3. Filter Bar (Control Panel) - Styled to match admin filter cards -->
        <div class="dashboard-section">
            <div class="admin-filter-card">
                <div class="card-header">
                    <h5 class="mb-0">Filter Dashboard Data</h5>
                </div>
                <div class="card-body">
                    <form action="/admin/dashboard" method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="eventType" class="form-label">Event Type</label>
                            <select name="eventType" id="eventType" class="admin-select form-select">
                                <option value="">All Event Types</option>
                                <% if (options && options.eventTypes && options.eventTypes.length > 0) { %>
                                    <% options.eventTypes.forEach(type => { %>
                                        <option value="<%= type %>" <%= filters && filters.eventType === type ? 'selected' : '' %>>
                                            <%= type %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="city" class="form-label">Participant City</label>
                            <select name="city" id="city" class="admin-select form-select">
                                <option value="">All Cities</option>
                                <% if (options && options.cities && options.cities.length > 0) { %>
                                    <% options.cities.forEach(city => { %>
                                        <option value="<%= city %>" <%= filters && filters.city === city ? 'selected' : '' %>>
                                            <%= city %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="role" class="form-label">Participant Role</label>
                            <select name="role" id="role" class="admin-select form-select">
                                <option value="">All Roles</option>
                                <% if (options && options.roles && options.roles.length > 0) { %>
                                    <% options.roles.forEach(role => { %>
                                        <option value="<%= role %>" <%= filters && filters.role === role ? 'selected' : '' %>>
                                            <%= role %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="admin-btn admin-btn-primary">Apply Filters</button>
                            <a href="/admin/dashboard" class="admin-btn admin-btn-secondary">Clear Filters</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 4. Analytics & Insights Section -->
        <div class="dashboard-section">
            <h2 class="section-title mb-4" style="font-family: 'DM Serif Display', serif; font-size: 2rem; color: #2C2C2C; text-align: center;">
                Analytics & Insights
            </h2>
            
            <!-- Top Row: Attendance and Impact -->
            <div class="row g-4 mb-4">
                <div class="col-lg-8">
                    <div class="card section-card h-100">
                        <div class="section-card-header">
                            <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Event Attendance Over Time</h5>
                            <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Registration trends over the last 6 months</p>
                        </div>
                        <div class="section-card-body">
                            <div style="height: 350px; position: relative;">
                                <canvas id="attendanceChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card section-card h-100">
                        <div class="section-card-header">
                            <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Program Impact</h5>
                            <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Attendance vs missed events</p>
                        </div>
                        <div class="section-card-body">
                            <div style="height: 350px; position: relative;">
                                <canvas id="impactChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bottom Row: Satisfaction and Donations -->
            <div class="row g-4 mb-4">
                <div class="col-lg-6">
                    <div class="card section-card h-100">
                        <div class="section-card-header">
                            <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Satisfaction Trends</h5>
                            <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Average satisfaction score over time</p>
                        </div>
                        <div class="section-card-body">
                            <div style="height: 350px; position: relative;">
                                <canvas id="satisfactionChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card section-card h-100">
                        <div class="section-card-header">
                            <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Donation Trends</h5>
                            <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Total donations by month</p>
                        </div>
                        <div class="section-card-body">
                            <div style="height: 350px; position: relative;">
                                <canvas id="donationChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 5. Advanced Analytics Dashboard -->
        <div class="dashboard-section">
            <div class="card section-card mb-4">
                <div class="section-card-header">
                    <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Advanced Analytics Dashboard</h5>
                    <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Comprehensive data visualization and insights</p>
                </div>
                <div class="section-card-body p-4">
                    <img src="/img/tableau.png" alt="Ella Rises Analytics Dashboard" 
                         class="img-fluid rounded shadow-sm" 
                         style="width: 100%; border: 2px solid #f0f0f0;">
                </div>
            </div>
        </div>

        <!-- 6. Recent Activity & Top Performers -->
        <div class="dashboard-section">
            <h2 class="section-title mb-4" style="font-family: 'DM Serif Display', serif; font-size: 2rem; color: #2C2C2C; text-align: center;">
                Activity & Highlights
            </h2>
            <div class="row g-4 mb-4">
                <div class="col-lg-8">
                    <div class="card section-card h-100">
                        <div class="section-card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Recent Activity</h5>
                                <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Latest event registrations</p>
                            </div>
                            <a href="/admin/events" class="admin-btn admin-btn-primary">View All</a>
                        </div>
                        <div class="section-card-body">
                            <div class="table-responsive">
                                <table class="table admin-table">
                                    <thead>
                                        <tr>
                                            <th>Participant</th>
                                            <th>Event</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (recentActivity && recentActivity.length > 0) { %>
                                            <% recentActivity.forEach(activity => { %>
                                                <tr>
                                                    <td style="font-family: 'Montserrat', sans-serif; font-weight: 600;">
                                                        <%= activity.participant_first_name %> <%= activity.participant_last_name %>
                                                    </td>
                                                    <td style="font-family: 'Montserrat', sans-serif;">
                                                        <%= activity.event_name %>
                                                    </td>
                                                    <td style="font-family: 'Montserrat', sans-serif;">
                                                        <%= activity.event_date_time_start ? new Date(activity.event_date_time_start).toLocaleDateString('en-US') : 'N/A' %>
                                                    </td>
                                                    <td>
                                                        <span class="admin-badge bg-<%= activity.registration_status === 'Registered' ? 'success' : 'secondary' %>">
                                                            <%= activity.registration_status %>
                                                        </span>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4" class="admin-empty-state">No recent activity</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card section-card h-100">
                        <div class="section-card-header">
                            <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Top Performers</h5>
                            <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Participants with most milestones</p>
                        </div>
                        <div class="section-card-body">
                            <% if (topPerformers && topPerformers.length > 0) { %>
                                <% topPerformers.forEach((performer, index) => { %>
                                    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 <%= index < topPerformers.length - 1 ? 'border-bottom' : '' %>" 
                                         style="padding-bottom: 1rem;">
                                        <div>
                                            <div class="fw-bold" style="font-family: 'Montserrat', sans-serif; font-size: 1rem;">
                                                <%= performer.participant_first_name %> <%= performer.participant_last_name %>
                                            </div>
                                            <div class="text-muted" style="font-size: 0.9rem; font-family: 'Montserrat', sans-serif;">
                                                <%= parseInt(performer.milestone_count) || 0 %> milestones
                                            </div>
                                        </div>
                                        <div class="badge" 
                                             style="background: linear-gradient(135deg, var(--brand-blue), var(--brand-lavender)); 
                                                    color: white; 
                                                    font-size: 1.1rem; 
                                                    padding: 0.5rem 0.75rem; 
                                                    border-radius: 50px;
                                                    font-family: 'DM Serif Display', serif;">
                                            #<%= index + 1 %>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <p class="text-muted text-center" style="font-family: 'Montserrat', sans-serif;">No data available</p>
                            <% } %>
                            <a href="/admin/participants" class="admin-btn admin-btn-primary w-100 mt-3" style="text-align: center; text-decoration: none;">
                                View All Participants
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 7. Upcoming Events Section -->
        <div class="dashboard-section">
            <div class="card section-card">
                <div class="section-card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Upcoming Events</h5>
                        <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Next 5 scheduled events</p>
                    </div>
                    <a href="/admin/events" class="admin-btn admin-btn-primary">View All Events</a>
                </div>
                <div class="section-card-body">
                    <div class="row g-3">
                        <% if (upcomingEvents && upcomingEvents.length > 0) { %>
                            <% upcomingEvents.forEach(event => { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 hover-lift" 
                                         style="border-radius: 15px; border: 2px solid #f0f0f0; transition: all 0.3s;">
                                        <div class="card-body">
                                            <h6 class="fw-bold mb-2" style="font-family: 'DM Serif Display', serif; color: var(--brand-blue);">
                                                <%= event.event_name %>
                                            </h6>
                                            <p class="text-muted mb-2" style="font-size: 0.9rem; font-family: 'Montserrat', sans-serif;">
                                                <i class="fas fa-tag me-2" style="color: var(--brand-lavender);"></i><%= event.event_type %>
                                            </p>
                                            <p class="text-muted mb-2" style="font-size: 0.9rem; font-family: 'Montserrat', sans-serif;">
                                                <i class="fas fa-calendar me-2" style="color: var(--brand-blue);"></i>
                                                <%= event.event_date_time_start ? new Date(event.event_date_time_start).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) : 'TBD' %>
                                            </p>
                                            <% if (event.event_location) { %>
                                                <p class="text-muted mb-0" style="font-size: 0.9rem; font-family: 'Montserrat', sans-serif;">
                                                    <i class="fas fa-map-marker-alt me-2" style="color: var(--brand-lavender);"></i><%= event.event_location %>
                                                </p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-muted text-center admin-empty-state" style="font-family: 'Montserrat', sans-serif;">No upcoming events scheduled</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- 8. Participant Demographics Chart -->
        <div class="dashboard-section">
            <div class="card section-card">
                <div class="section-card-header">
                    <h5 class="fw-bold mb-1" style="font-family: 'DM Serif Display', serif; font-size: 1.4rem;">Participant Demographics</h5>
                    <p class="text-muted mb-0" style="font-size: 0.95rem; font-family: 'Montserrat', sans-serif;">Top 5 cities by participant count</p>
                </div>
                <div class="section-card-body">
                    <div style="height: 350px; position: relative;">
                        <canvas id="demographicsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Data from EJS (Safe Injection)
        const cityLabels = <%- JSON.stringify(cityLabels || []) %>;
        const cityData = <%- JSON.stringify(cityCounts || []) %>;
        const impactData = <%- JSON.stringify(attendanceData || [0, 0]) %>;
        const attendanceOverTime = <%- JSON.stringify(attendanceOverTime || []) %>;
        const satisfactionOverTime = <%- JSON.stringify(satisfactionOverTime || []) %>;
        const donationOverTime = <%- JSON.stringify(donationOverTime || []) %>;

        // Helper function to format month labels
        function formatMonth(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
        }

        // Event Attendance Over Time Chart
        const ctxAttendance = document.getElementById('attendanceChart');
        if (ctxAttendance) {
            const attendanceLabels = attendanceOverTime.map(item => formatMonth(item.month));
            const attendanceCounts = attendanceOverTime.map(item => parseInt(item.count || 0));
            new Chart(ctxAttendance.getContext('2d'), {
                type: 'line',
                data: {
                    labels: attendanceLabels,
                    datasets: [{
                        label: 'Registrations',
                        data: attendanceCounts,
                        borderColor: '#8DA9C4',
                        backgroundColor: 'rgba(141, 169, 196, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2, 4] }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // Satisfaction Trends Chart
        const ctxSatisfaction = document.getElementById('satisfactionChart');
        if (ctxSatisfaction) {
            const satisfactionLabels = satisfactionOverTime.map(item => formatMonth(item.month));
            const satisfactionScores = satisfactionOverTime.map(item => parseFloat(item.avg_score || 0).toFixed(1));
            new Chart(ctxSatisfaction.getContext('2d'), {
                type: 'line',
                data: {
                    labels: satisfactionLabels,
                    datasets: [{
                        label: 'Avg Satisfaction',
                        data: satisfactionScores,
                        borderColor: '#958EBF',
                        backgroundColor: 'rgba(149, 142, 191, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 5,
                            grid: { borderDash: [2, 4] }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // Donation Trends Chart
        const ctxDonation = document.getElementById('donationChart');
        if (ctxDonation) {
            // Filter out any future dates and ensure we only show actual data
            const now = new Date();
            const validDonationData = donationOverTime.filter(item => {
                if (!item.month) return false;
                const monthDate = new Date(item.month);
                // Only include months that are not in the future
                return monthDate <= now;
            });
            
            const donationLabels = validDonationData.map(item => formatMonth(item.month));
            const donationAmounts = validDonationData.map(item => parseFloat(item.total || 0));
            
            new Chart(ctxDonation.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: donationLabels,
                    datasets: [{
                        label: 'Donations',
                        data: donationAmounts,
                        backgroundColor: '#EE969E',
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2, 4] },
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // Demographics Chart (Vertical Bar)
        const ctxDemographics = document.getElementById('demographicsChart');
        if (ctxDemographics) {
            new Chart(ctxDemographics.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: cityLabels,
                    datasets: [{
                        label: 'Participants',
                        data: cityData,
                        backgroundColor: '#8DA9C4',
                        borderRadius: 5,
                        barThickness: 30
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2, 4] },
                            ticks: { stepSize: 1 }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        // Impact Chart (Doughnut)
        const ctxImpact = document.getElementById('impactChart');
        if (ctxImpact) {
            new Chart(ctxImpact.getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Attended', 'Missed'],
                    datasets: [{
                        data: impactData,
                        backgroundColor: ['#958EBF', '#FAD2D8'],
                        borderWidth: 0,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20, font: { family: "'Montserrat', sans-serif" } } }
                    }
                }
            });
        }
    </script>

    <%- include('../partials/footer') %>
