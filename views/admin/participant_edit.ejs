<%- include('../partials/header', { user: user }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Edit Participant</h2>
        </div>
        <div class="card-body">
            <form action="/admin/participants/edit/<%= participant.participant_id %>" method="POST">
                <div class="mb-3">
                    <label for="participant_first_name" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="participant_first_name" name="participant_first_name" value="<%= participant.participant_first_name %>" required>
                </div>
                <div class="mb-3">
                    <label for="participant_last_name" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="participant_last_name" name="participant_last_name" value="<%= participant.participant_last_name %>" required>
                </div>
                <div class="mb-3">
                    <label for="participant_city" class="form-label">City</label>
                    <input type="text" class="form-control" id="participant_city" name="participant_city" value="<%= participant.participant_city || '' %>">
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="/admin/participants" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

