<%- include('../partials/header', { user: user }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header">
            <h2><%= event ? 'Edit' : 'Create' %> Event Instance</h2>
        </div>
        <div class="card-body">
            <form action="<%= event ? '/admin/events/edit/' + event.event_instance_id : '/admin/events/add' %>" method="POST">
                <div class="mb-3">
                    <label for="event_definition_id" class="form-label">Event Definition (Template)</label>
                    <select id="event_definition_id" name="event_definition_id" class="form-select" required>
                        <option value="">Select Definition...</option>
                        <% definitions.forEach(t => { %>
                            <option value="<%= t.event_definition_id %>" <%= event && event.event_definition_id === t.event_definition_id ? 'selected' : '' %>>
                                <%= t.event_name %> (<%= t.event_type %>)
                            </option>
                        <% }) %>
                    </select>
                    <small class="text-muted">Select the type of event this is.</small>
                </div>

                <h4 class="mb-3 mt-4">Schedule & Location</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="event_date_time_start" class="form-label">Start Time</label>
                        <input type="datetime-local" id="event_date_time_start" name="event_date_time_start"
                            class="form-control" required
                            value="<%= event ? new Date(new Date(event.event_date_time_start).getTime() - (new Date().getTimezoneOffset() * 60000)).toISOString().slice(0, 16) : '' %>">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="event_date_time_end" class="form-label">End Time</label>
                        <input type="datetime-local" id="event_date_time_end" name="event_date_time_end"
                            class="form-control" required
                            value="<%= event ? new Date(new Date(event.event_date_time_end).getTime() - (new Date().getTimezoneOffset() * 60000)).toISOString().slice(0, 16) : '' %>">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="event_location" class="form-label">Location</label>
                    <input type="text" id="event_location" name="event_location" class="form-control"
                        value="<%= event ? event.event_location : '' %>">
                </div>

                <div class="mb-3">
                    <label for="event_capacity" class="form-label">Capacity</label>
                    <input type="number" id="event_capacity" name="event_capacity" class="form-control"
                        value="<%= event ? event.event_capacity : '' %>">
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Event</button>
                    <a href="/admin/events" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

