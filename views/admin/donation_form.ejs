<%- include('../partials/header', { user: user }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header">
            <h2><%= donation ? 'Edit' : 'Record' %> Donation</h2>
        </div>
        <div class="card-body">
            <form action="<%= donation ? '/admin/donations/edit/' + donation.donation_id : '/admin/donations/add' %>" method="POST">
                <div class="mb-3">
                    <label for="participant_id" class="form-label">Participant (Optional)</label>
                    <select id="participant_id" name="participant_id" class="form-select">
                        <option value="">Select Participant (or leave blank for External)...</option>
                        <% participants.forEach(p => { %>
                            <option value="<%= p.participant_id %>" <%= donation && donation.participant_id === p.participant_id ? 'selected' : '' %>>
                                <%= p.participant_first_name %> <%= p.participant_last_name %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="donation_amount" class="form-label">Amount ($)</label>
                        <input type="number" step="0.01" id="donation_amount" name="donation_amount"
                            class="form-control" value="<%= donation ? donation.donation_amount : '' %>" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="donation_date" class="form-label">Date</label>
                        <input type="date" id="donation_date" name="donation_date" class="form-control" 
                            <% if (donation && donation.donation_date) { 
                                let dateStr = '';
                                if (typeof donation.donation_date === 'string' && donation.donation_date.match(/^\d{4}-\d{2}-\d{2}$/)) {
                                    dateStr = donation.donation_date;
                                } else {
                                    const dateParts = String(donation.donation_date).split('-');
                                    if (dateParts.length === 3) {
                                        dateStr = dateParts[0] + '-' + dateParts[1] + '-' + dateParts[2];
                                    } else {
                                        const d = new Date(donation.donation_date);
                                        const year = d.getFullYear();
                                        const month = String(d.getMonth() + 1).padStart(2, '0');
                                        const day = String(d.getDate()).padStart(2, '0');
                                        dateStr = year + '-' + month + '-' + day;
                                    }
                                }
                            } %>
                            value="<%= typeof dateStr !== 'undefined' ? dateStr : '' %>" required>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Donation</button>
                    <a href="/admin/donations" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

