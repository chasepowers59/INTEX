<%- include('../partials/header', { user: user }) %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Admin View Background - Peach */
        body {
            background-color: #FFD1C7;
        }

        /* Brand Colors */
        :root {
            --brand-blue: #8DA9C4;
            --brand-lavender: #958EBF;
            --brand-pink: #FAD2D8;
            --brand-cream: #FDFBF7;
            --brand-coral: #EE969E;
            --brand-peach: #FFD1C7;
        }

        .card {
            border-radius: 20px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
            background: white;
        }
    </style>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Milestone Maintenance</h1>
            <div>
                <% if (user && user.participant_role === 'admin') { %>
                    <a href="/admin/milestones/add" class="btn btn-success me-2">Add Milestone</a>
                <% } %>
                <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <!-- Search Bar -->
        <form action="/admin/milestones" method="GET" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control"
                    placeholder="Search by milestone title or participant name..." value="<%= search || '' %>">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Participant Name</th>
                            <th>Milestone Title</th>
                            <th>Milestone Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (milestones && milestones.length> 0) { %>
                            <% milestones.forEach(m=> { %>
                                <tr>
                                    <td>
                                        <%= m.participant_first_name %>
                                            <%= m.participant_last_name %>
                                    </td>
                                    <td>
                                        <%= m.milestone_title %>
                                    </td>
                                    <td>
                                        <%= m.milestone_date ? new Date(m.milestone_date).toLocaleDateString('en-US') : 'N/A' %>
                                    </td>
                                    <td>
                                        <% if (user && user.participant_role === 'admin') { %>
                                            <a href="/admin/milestones/edit/<%= m.milestone_id %>"
                                                class="btn btn-sm btn-primary">Edit</a>
                                            <form action="/admin/milestones/delete/<%= m.milestone_id %>" method="POST"
                                                style="display: inline;"
                                                onsubmit="return confirm('Are you sure you want to delete this milestone?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">No milestones found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>