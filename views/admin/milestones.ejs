<%- include('../partials/header', { user: user }) %>
<%- include('_shared_styles') %>

    <div class="container mt-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h1>Milestone Maintenance</h1>
            <div class="btn-group">
                <% if (user && user.participant_role === 'admin') { %>
                    <a href="/admin/milestones/add" class="admin-btn admin-btn-success">Add Milestone</a>
                <% } %>
                <a href="/admin/dashboard" class="admin-btn admin-btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="admin-search-card">
            <form action="/admin/milestones" method="GET" class="admin-search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control"
                        placeholder="Search by milestone title or participant name..." value="<%= search || '' %>">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>

        <!-- Table -->
        <div class="admin-table-card">
            <div class="card-body">
                <table class="table admin-table">
                    <thead>
                        <tr>
                            <th>Participant Name</th>
                            <th>Milestone Title</th>
                            <th>Milestone Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (milestones && milestones.length > 0) { %>
                            <% milestones.forEach(m => { %>
                                <tr>
                                    <td><%= m.participant_first_name %> <%= m.participant_last_name %></td>
                                    <td><%= m.milestone_title %></td>
                                    <td><%= m.milestone_date ? new Date(m.milestone_date).toLocaleDateString('en-US') : 'N/A' %></td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <% if (user && user.participant_role === 'admin') { %>
                                                <a href="/admin/milestones/edit/<%= m.milestone_id %>"
                                                    class="admin-btn admin-btn-primary">Edit</a>
                                                <form action="/admin/milestones/delete/<%= m.milestone_id %>" method="POST"
                                                    style="display: inline;" class="delete-form">
                                                    <button type="submit" class="admin-btn admin-btn-danger">Delete</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="admin-empty-state">No milestones found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Handle delete confirmation with event delegation
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Are you sure you want to delete this milestone?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>