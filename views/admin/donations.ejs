<%- include('../partials/header', { user: user }) %>
<%- include('_shared_styles') %>

    <div class="container mt-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h1>Donation Maintenance</h1>
            <div class="btn-group">
                <a href="/donations/insights" class="admin-btn admin-btn-info">View Insights</a>
                <% if (user && user.participant_role === 'admin') { %>
                    <a href="/admin/donations/add" class="admin-btn admin-btn-success">Add Donation</a>
                <% } %>
                <a href="/admin/dashboard" class="admin-btn admin-btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <!-- Search and Filters Combined -->
        <div class="admin-filter-card">
            <div class="card-header">
                <h5 class="mb-0">Search & Filters</h5>
            </div>
            <div class="card-body">
                <form action="/admin/donations" method="GET" class="row g-3">
                    <!-- Search -->
                    <div class="col-12">
                        <label for="search" class="form-label">Search</label>
                        <input type="text" name="search" id="search" class="form-control admin-select" 
                            placeholder="Search by donor name..." 
                            value="<%= filters && filters.search ? filters.search : '' %>">
                    </div>
                    <!-- Filters -->
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" name="startDate" id="startDate" class="form-control admin-select"
                            value="<%= filters && filters.startDate ? filters.startDate : '' %>">
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" name="endDate" id="endDate" class="form-control admin-select"
                            value="<%= filters && filters.endDate ? filters.endDate : '' %>">
                    </div>
                    <div class="col-md-3">
                        <label for="minAmount" class="form-label">Minimum Amount ($)</label>
                        <input type="number" step="0.01" name="minAmount" id="minAmount" class="form-control admin-select"
                            placeholder="0.00" value="<%= filters && filters.minAmount ? filters.minAmount : '' %>">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" style="opacity: 0;">&nbsp;</label>
                        <div style="display: flex; gap: 0.5rem;">
                            <button type="submit" class="admin-btn admin-btn-primary" style="flex: 1;">Apply</button>
                            <a href="/admin/donations" class="admin-btn admin-btn-secondary" style="flex: 1; text-align: center; text-decoration: none;">Clear</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table -->
        <div class="admin-table-card">
            <div class="card-body">
                <table class="table admin-table">
                    <thead>
                        <tr>
                            <th>Donor Name</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (donations && donations.length > 0) { %>
                            <% donations.forEach(d => { %>
                                <tr>
                                    <td>
                                        <% if (d.participant_first_name) { %>
                                            <%= d.participant_first_name %> <%= d.participant_last_name %>
                                        <% } else { %>
                                            <span class="text-muted fst-italic">Guest / Anonymous</span>
                                        <% } %>
                                    </td>
                                    <td>$<%= parseFloat(d.donation_amount).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
                                    <td><%= d.donation_date ? new Date(d.donation_date).toLocaleDateString('en-US') : 'N/A' %></td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <a href="/admin/donations/<%= d.donation_id %>" class="admin-btn admin-btn-info">View Details</a>
                                            <% if (user && user.participant_role === 'admin') { %>
                                                <form action="/admin/donations/delete/<%= d.donation_id %>" method="POST"
                                                    style="display: inline;" class="delete-form">
                                                    <button type="submit" class="admin-btn admin-btn-danger">Delete</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="admin-empty-state">No donations found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Handle delete confirmation with event delegation
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Are you sure you want to delete this donation?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>