<%- include('../partials/header', { user: user }) %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Admin View Background - Peach */
        body {
            background-color: #FFD1C7;
        }

        /* Brand Colors */
        :root {
            --brand-blue: #8DA9C4;
            --brand-lavender: #958EBF;
            --brand-pink: #FAD2D8;
            --brand-cream: #FDFBF7;
            --brand-coral: #EE969E;
            --brand-peach: #FFD1C7;
        }

        .card {
            border-radius: 20px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
            background: white;
        }
    </style>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Donation Maintenance</h1>
            <div>
                <a href="/donations/insights" class="btn btn-info me-2">View Donation Insights</a>
                <% if (user && user.participant_role === 'admin') { %>
                    <a href="/admin/donations/add" class="btn btn-success me-2">Add Donation</a>
                <% } %>
                <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <!-- Advanced Filters -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Filters</h5>
            </div>
            <div class="card-body">
                <form action="/admin/donations" method="GET" class="row g-3">
                    <div class="col-md-3">
                        <label for="search" class="form-label">Search by Donor Name</label>
                        <input type="text" name="search" id="search" class="form-control" placeholder="Donor name..."
                            value="<%= filters && filters.search ? filters.search : '' %>">
                    </div>
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" name="startDate" id="startDate" class="form-control"
                            value="<%= filters && filters.startDate ? filters.startDate : '' %>">
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" name="endDate" id="endDate" class="form-control"
                            value="<%= filters && filters.endDate ? filters.endDate : '' %>">
                    </div>
                    <div class="col-md-3">
                        <label for="minAmount" class="form-label">Minimum Amount ($)</label>
                        <input type="number" step="0.01" name="minAmount" id="minAmount" class="form-control"
                            placeholder="0.00" value="<%= filters && filters.minAmount ? filters.minAmount : '' %>">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                        <a href="/admin/donations" class="btn btn-secondary">Clear Filters</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Donor Name</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (donations && donations.length> 0) { %>
                            <% donations.forEach(d=> { %>
                                <tr>
                                    <td>
                                        <% if (d.participant_first_name) { %>
                                            <%= d.participant_first_name %>
                                                <%= d.participant_last_name %>
                                                    <% } else { %>
                                                        <span class="text-muted fst-italic">Guest / Anonymous</span>
                                                        <% } %>
                                    </td>
                                    <td>$<%= d.donation_amount %>
                                    </td>
                                    <td>
                                        <%= d.donation_date ? new Date(d.donation_date).toLocaleDateString('en-US') : 'N/A' %>
                                    </td>
                                    <td>
                                        <% if (user && user.participant_role === 'admin') { %>
                                            <form action="/admin/donations/delete/<%= d.donation_id %>" method="POST"
                                                style="display: inline;"
                                                onsubmit="return confirm('Are you sure you want to delete this donation?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">No donations found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>