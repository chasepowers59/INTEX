<%- include('../partials/header', { user: user }) %>
<%- include('_shared_styles') %>

    <div class="container mt-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h1>Survey Maintenance</h1>
            <div class="btn-group">
                <a href="/admin/dashboard" class="admin-btn admin-btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="admin-search-card">
            <form action="/admin/surveys" method="GET" class="admin-search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search by participant name, event name, or comments..." value="<%= search || '' %>">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <% if (search) { %>
                        <a href="/admin/surveys" class="admin-btn admin-btn-secondary" style="margin-left: 0.5rem;">Clear</a>
                    <% } %>
                </div>
            </form>
        </div>

        <!-- Advanced Filters -->
        <div class="admin-filter-card">
            <div class="card-header">
                <h5 class="mb-0">Filters</h5>
            </div>
            <div class="card-body">
                <form action="/admin/surveys" method="GET" class="row g-3">
                    <div class="col-md-6">
                        <label for="eventFilter" class="form-label">Filter by Event</label>
                        <select name="eventFilter" id="eventFilter" class="admin-select form-select">
                            <option value="">All Events</option>
                            <% if (eventDefinitions && eventDefinitions.length > 0) { %>
                                <% eventDefinitions.forEach(event => { %>
                                    <option value="<%= event.event_definition_id %>" <%= filters && filters.eventFilter === event.event_definition_id ? 'selected' : '' %>>
                                        <%= event.event_name %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="scoreFilter" class="form-label">Filter by Recommendation Score (NPS)</label>
                        <select name="scoreFilter" id="scoreFilter" class="admin-select form-select">
                            <option value="">All Scores</option>
                            <option value="detractors" <%= filters && filters.scoreFilter === 'detractors' ? 'selected' : '' %>>Detractors</option>
                            <option value="passives" <%= filters && filters.scoreFilter === 'passives' ? 'selected' : '' %>>Passives</option>
                            <option value="promoters" <%= filters && filters.scoreFilter === 'promoters' ? 'selected' : '' %>>Promoters</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="admin-btn admin-btn-primary">Apply Filters</button>
                        <a href="/admin/surveys" class="admin-btn admin-btn-secondary">Clear Filters</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table -->
        <div class="admin-table-card">
            <div class="card-body">
                <table class="table admin-table">
                    <thead>
                        <tr>
                            <th>Event Name</th>
                            <th>Participant Name</th>
                            <th>Overall Score</th>
                            <th>NPS Bucket</th>
                            <th>Submission Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (surveys && surveys.length > 0) { %>
                            <% surveys.forEach(s => { %>
                                <tr>
                                    <td><%= s.event_name %></td>
                                    <td><%= s.participant_first_name %> <%= s.participant_last_name %></td>
                                    <td><%= s.survey_overall_score !== null ? parseFloat(s.survey_overall_score).toFixed(2) : 'N/A' %></td>
                                    <td><%= s.survey_nps_bucket || 'N/A' %></td>
                                    <td><%= s.survey_submission_date ? new Date(s.survey_submission_date).toLocaleString() : 'N/A' %></td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <a href="/admin/surveys/<%= s.survey_id %>" class="admin-btn admin-btn-info">View Details</a>
                                            <% if (user && user.participant_role === 'admin') { %>
                                                <form action="/admin/surveys/delete/<%= s.survey_id %>" method="POST"
                                                    style="display: inline;" class="delete-form">
                                                    <button type="submit" class="admin-btn admin-btn-danger">Delete</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="admin-empty-state">No surveys found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

    <script>
        // Handle delete confirmation with event delegation
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Are you sure you want to delete this survey?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
    </div>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>