<%- include('../partials/header', { user: user }) %>
<%- include('_shared_styles') %>

    <div class="container mt-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h1>Participant Maintenance</h1>
            <div class="btn-group">
                <% if (user && user.participant_role === 'admin') { %>
                    <a href="/admin/participants/add" class="admin-btn admin-btn-success">Add Participant</a>
                <% } %>
                <a href="/admin/dashboard" class="admin-btn admin-btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <!-- Search and Filters Combined -->
        <div class="admin-filter-card">
            <div class="card-header">
                <h5 class="mb-0">Search & Filters</h5>
            </div>
            <div class="card-body">
                <form action="/admin/participants" method="GET" class="row g-3">
                    <div class="col-12">
                        <label for="search" class="form-label">Search</label>
                        <div class="input-group">
                            <input type="text" name="search" id="search" class="form-control admin-select" 
                                placeholder="Search by name or city..." value="<%= search || '' %>">
                            <button type="submit" class="admin-btn admin-btn-primary">Search</button>
                            <% if (search) { %>
                                <a href="/admin/participants" class="admin-btn admin-btn-secondary">Clear</a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table -->
        <div class="admin-table-card">
            <div class="card-body">
                <table class="table admin-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>City</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (participants && participants.length > 0) { %>
                            <% participants.forEach(p => { %>
                                <tr>
                                    <td><%= p.participant_first_name %> <%= p.participant_last_name %></td>
                                    <td><%= p.age !== null ? p.age : 'N/A' %></td>
                                    <td><%= p.participant_city || 'N/A' %></td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <% if (user && user.participant_role === 'admin') { %>
                                                <a href="/admin/participants/edit/<%= p.participant_id %>"
                                                    class="admin-btn admin-btn-primary">Edit</a>
                                                <form action="/admin/participants/delete/<%= p.participant_id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this participant? This action cannot be undone.');">
                                                    <button type="submit" class="admin-btn admin-btn-danger">Delete</button>
                                                </form>
                                            <% } %>
                                            <a href="/participants/<%= p.participant_id %>" class="admin-btn admin-btn-info">View Details</a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="admin-empty-state">No participants found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>