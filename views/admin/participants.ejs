<%- include('../partials/header', { user: user }) %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Admin View Background - Peach */
        body {
            background-color: #FFD1C7;
        }

        /* Brand Colors */
        :root {
            --brand-blue: #8DA9C4;
            --brand-lavender: #958EBF;
            --brand-pink: #FAD2D8;
            --brand-cream: #FDFBF7;
            --brand-coral: #EE969E;
            --brand-peach: #FFD1C7;
        }

        .card {
            border-radius: 20px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
            background: white;
        }
    </style>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Participant Maintenance</h1>
            <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>

        <!-- Search Bar -->
        <form action="/admin/participants" method="GET" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search by name or city..."
                    value="<%= search || '' %>">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>City</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (participants && participants.length> 0) { %>
                            <% participants.forEach(p=> { %>
                                <tr>
                                    <td>
                                        <%= p.participant_first_name %>
                                            <%= p.participant_last_name %>
                                    </td>
                                    <td>
                                        <%= p.age !==null ? p.age : 'N/A' %>
                                    </td>
                                    <td>
                                        <%= p.participant_city || 'N/A' %>
                                    </td>
                                    <td>
                                        <% if (user && user.participant_role === 'admin') { %>
                                            <a href="/admin/participants/edit/<%= p.participant_id %>"
                                                class="btn btn-sm btn-primary">Edit</a>
                                        <% } %>
                                        <a href="/participants/<%= p.participant_id %>" class="btn btn-sm btn-info">View
                                            Details</a>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">No participants found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>