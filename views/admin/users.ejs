<%- include('../partials/header', { user: user }) %>
<%- include('_shared_styles') %>

    <div class="container mt-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h1>User Maintenance</h1>
            <div class="btn-group">
                <a href="/admin/dashboard" class="admin-btn admin-btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        <% if (messages && messages.success && messages.success.length > 0) { %>
            <div class="alert alert-success admin-alert alert-dismissible fade show" role="alert">
                <%= messages.success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (messages && messages.error && messages.error.length > 0) { %>
            <div class="alert alert-danger admin-alert alert-dismissible fade show" role="alert">
                <%= messages.error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <!-- Search and Filters Combined -->
        <div class="admin-filter-card">
            <div class="card-header">
                <h5 class="mb-0">Search & Filters</h5>
            </div>
            <div class="card-body">
                <form action="/admin/users" method="GET" class="row g-3">
                    <div class="col-12">
                        <label for="search" class="form-label">Search</label>
                        <div class="input-group">
                            <input type="text" name="search" id="search" class="form-control admin-select" 
                                placeholder="Search by email..." value="<%= search || '' %>">
                            <button type="submit" class="admin-btn admin-btn-primary">Search</button>
                            <% if (search) { %>
                                <a href="/admin/users" class="admin-btn admin-btn-secondary">Clear</a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table -->
        <div class="admin-table-card">
            <div class="card-body">
                <table class="table admin-table">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users && users.length > 0) { %>
                            <% users.forEach(u => { %>
                                <tr>
                                    <td><%= u.participant_id %></td>
                                    <td><%= u.participant_email %></td>
                                    <td>
                                        <% if (user && user.participant_role === 'admin') { %>
                                            <form action="/admin/users/<%= u.participant_id %>/role" method="POST"
                                                style="display: inline;" class="role-update-form">
                                                <select name="participant_role" class="admin-select role-select" style="min-width: 120px;">
                                                    <option value="admin" <%= u.participant_role === 'admin' ? 'selected' : '' %>>Admin</option>
                                                    <option value="participant" <%= u.participant_role === 'participant' ? 'selected' : '' %>>Participant</option>
                                                </select>
                                            </form>
                                        <% } else { %>
                                            <span class="admin-badge bg-secondary"><%= u.participant_role %></span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <% if (user && user.participant_role === 'admin') { %>
                                                <a href="/admin/users/edit/<%= u.participant_id %>" class="admin-btn admin-btn-primary">Edit</a>
                                                <button type="button" class="admin-btn admin-btn-warning reset-password-btn" 
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#resetPasswordModal"
                                                    data-user-id="<%= u.participant_id %>"
                                                    data-user-email="<%= u.participant_email %>">
                                                    Reset Password
                                                </button>
                                                <form action="/admin/users/delete/<%= u.participant_id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                                    <button type="submit" class="admin-btn admin-btn-danger">Delete</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="admin-empty-state">No users found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Reset Password Modal -->
    <div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="resetPasswordForm" method="POST" action="">
                    <input type="hidden" id="hidden_user_id" name="participant_id" value="">
                    <div class="modal-header">
                        <h5 class="modal-title" id="resetPasswordModalLabel">Reset User Password</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="modalUserEmail">Enter the new password for this user.</p>
                        <div class="mb-3">
                            <label for="new_password" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="new_password" name="new_password" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirm_password" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                            <div class="invalid-feedback" id="passwordMismatchError" style="display: none;">
                                Passwords do not match.
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="submitPasswordBtn">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Fix CSP Violation: Use event delegation instead of inline event handlers
        document.addEventListener('DOMContentLoaded', function() {
            // Handle reset password button clicks (replaces inline onclick)
            const resetButtons = document.querySelectorAll('.reset-password-btn');
            resetButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const userId = this.getAttribute('data-user-id');
                    const userEmail = this.getAttribute('data-user-email');
                    
                    // Update modal title with user email
                    const modalTitle = document.getElementById('resetPasswordModalLabel');
                    modalTitle.textContent = 'Reset Password for ' + userEmail;
                    
                    // Update hidden form field with user ID
                    const hiddenUserId = document.getElementById('hidden_user_id');
                    hiddenUserId.value = userId;
                    
                    // Update form action
                    const form = document.getElementById('resetPasswordForm');
                    form.action = `/admin/users/${userId}/reset-password`;
                    
                    // Clear form fields
                    document.getElementById('new_password').value = '';
                    document.getElementById('confirm_password').value = '';
                    document.getElementById('passwordMismatchError').style.display = 'none';
                    document.getElementById('new_password').classList.remove('is-invalid');
                    document.getElementById('confirm_password').classList.remove('is-invalid');
                });
            });
            
            // Handle role dropdown changes (replaces inline onchange)
            const roleSelects = document.querySelectorAll('.role-select');
            roleSelects.forEach(select => {
                select.addEventListener('change', function() {
                    this.form.submit();
                });
            });
            
            // Password validation: Check if passwords match
            const confirmPasswordField = document.getElementById('confirm_password');
            const newPasswordField = document.getElementById('new_password');
            const passwordMismatchError = document.getElementById('passwordMismatchError');
            const submitBtn = document.getElementById('submitPasswordBtn');
            
            function validatePasswords() {
                const newPassword = newPasswordField.value;
                const confirmPassword = confirmPasswordField.value;
                
                if (confirmPassword && newPassword !== confirmPassword) {
                    confirmPasswordField.classList.add('is-invalid');
                    passwordMismatchError.style.display = 'block';
                    submitBtn.disabled = true;
                    return false;
                } else {
                    confirmPasswordField.classList.remove('is-invalid');
                    passwordMismatchError.style.display = 'none';
                    submitBtn.disabled = false;
                    return true;
                }
            }
            
            if (confirmPasswordField && newPasswordField) {
                confirmPasswordField.addEventListener('input', validatePasswords);
                newPasswordField.addEventListener('input', validatePasswords);
                
                // Prevent form submission if passwords don't match
                const form = document.getElementById('resetPasswordForm');
                if (form) {
                    form.addEventListener('submit', function(e) {
                        if (!validatePasswords()) {
                            e.preventDefault();
                            return false;
                        }
                    });
                }
            }
        });
    </script>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>