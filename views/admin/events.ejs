<%- include('../partials/header', { user: user }) %>
<%- include('_shared_styles') %>

    <div class="container mt-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h1>Event Maintenance</h1>
            <div class="btn-group">
                <% if (user && user.participant_role === 'admin') { %>
                    <a href="/admin/events/add" class="admin-btn admin-btn-success">Create Event</a>
                <% } %>
                <a href="/admin/dashboard" class="admin-btn admin-btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="admin-search-card">
            <form action="/admin/events" method="GET" class="admin-search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search by event name or location..."
                        value="<%= search || '' %>">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>

        <!-- Table -->
        <div class="admin-table-card">
            <div class="card-body">
                <table class="table admin-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Event Name</th>
                            <th>Location</th>
                            <th>Capacity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (events && events.length > 0) { %>
                            <% events.forEach(e => { %>
                                <tr>
                                    <td><%= e.event_date_time_start ? new Date(e.event_date_time_start).toLocaleString('en-US') : 'N/A' %></td>
                                    <td><%= e.event_name %></td>
                                    <td><%= e.event_location || 'N/A' %></td>
                                    <td><%= e.event_capacity || 'N/A' %></td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <% if (user && user.participant_role === 'admin') { %>
                                                <a href="/admin/events/edit/<%= e.event_instance_id %>"
                                                    class="admin-btn admin-btn-primary">Edit</a>
                                                <form action="/admin/events/delete/<%= e.event_instance_id %>" method="POST"
                                                    style="display: inline;" class="delete-form">
                                                    <button type="submit" class="admin-btn admin-btn-danger">Delete</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="admin-empty-state">No events found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Handle delete confirmation with event delegation
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Are you sure you want to delete this event?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>

    <%- include('../partials/footer') %>

        <%- include('../partials/pagination_script') %>