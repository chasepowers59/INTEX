<style>
    /* Admin View Background - Peach */
    body {
        background-color: #FFD1C7;
        padding-bottom: 3rem;
    }

    /* Brand Colors */
    :root {
        --brand-blue: #8DA9C4;
        --brand-lavender: #958EBF;
        --brand-pink: #FAD2D8;
        --brand-cream: #FDFBF7;
        --brand-coral: #EE969E;
        --brand-peach: #FFD1C7;
    }

    /* Page Header */
    .admin-page-header {
        background: white;
        border-radius: 20px;
        padding: 2rem 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .admin-page-header h1 {
        font-family: 'DM Serif Display', serif;
        font-size: 2rem;
        color: #2C2C2C;
        margin: 0;
    }

    .admin-page-header .btn-group {
        display: flex;
        gap: 0.75rem;
    }

    /* Search Bar */
    .admin-search-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    }

    .admin-search-form .input-group {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .admin-search-form .form-control {
        border: none;
        padding: 0.75rem 1.25rem;
        font-size: 0.95rem;
        font-family: 'Montserrat', sans-serif;
    }

    .admin-search-form .form-control:focus {
        box-shadow: none;
        border-color: var(--brand-blue);
    }

    .admin-search-form .btn-primary {
        background: linear-gradient(135deg, var(--brand-blue), var(--brand-lavender));
        border: none;
        padding: 0.75rem 2rem;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .admin-search-form .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(141, 169, 196, 0.4);
    }

    /* Filter Card */
    .admin-filter-card {
        background: white;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .admin-filter-card .card-header {
        background: linear-gradient(135deg, var(--brand-blue), var(--brand-lavender));
        color: white;
        padding: 1rem 1.5rem;
        border: none;
        font-family: 'DM Serif Display', serif;
        font-size: 1.1rem;
    }

    .admin-filter-card .card-body {
        padding: 1.5rem;
    }

    /* Table Card */
    .admin-table-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .admin-table-card .card-body {
        padding: 0;
    }

    /* Modern Table Styling */
    .admin-table {
        margin: 0;
        width: 100%;
    }

    .admin-table thead {
        background: linear-gradient(135deg, var(--brand-blue), var(--brand-lavender));
        color: white;
    }

    .admin-table thead th {
        border: none;
        padding: 1.25rem 1.5rem;
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-family: 'Montserrat', sans-serif;
    }

    .admin-table tbody tr {
        transition: background-color 0.2s, transform 0.1s;
        border-bottom: 1px solid #f0f0f0;
    }

    .admin-table tbody tr:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
    }

    .admin-table tbody td {
        padding: 1.25rem 1.5rem;
        vertical-align: middle;
        font-family: 'Montserrat', sans-serif;
        color: #2C2C2C;
        font-size: 0.95rem;
    }

    .admin-table tbody tr:last-child {
        border-bottom: none;
    }

    /* Action Buttons */
    .admin-action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .admin-btn {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
        transition: all 0.2s;
        border: none;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
    }

    .admin-btn-primary {
        background: linear-gradient(135deg, var(--brand-blue), var(--brand-lavender));
        color: white;
    }

    .admin-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(141, 169, 196, 0.4);
        color: white;
    }

    .admin-btn-info {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
    }

    .admin-btn-info:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(23, 162, 184, 0.4);
        color: white;
    }

    .admin-btn-success {
        background: linear-gradient(135deg, #28a745, #218838);
        color: white;
    }

    .admin-btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.4);
        color: white;
    }

    .admin-btn-warning {
        background: linear-gradient(135deg, #ffc107, #e0a800);
        color: #2C2C2C;
    }

    .admin-btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.4);
        color: #2C2C2C;
    }

    .admin-btn-danger {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
    }

    .admin-btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
        color: white;
    }

    .admin-btn-secondary {
        background: #6c757d;
        color: white;
    }

    .admin-btn-secondary:hover {
        background: #5a6268;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(108, 117, 125, 0.4);
    }

    /* Badge Styling */
    .admin-badge {
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
    }

    /* Form Select Styling */
    .admin-select {
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 0.5rem 0.75rem;
        font-size: 0.85rem;
        font-family: 'Montserrat', sans-serif;
        transition: border-color 0.2s;
    }

    .admin-select:focus {
        border-color: var(--brand-blue);
        box-shadow: 0 0 0 0.2rem rgba(141, 169, 196, 0.25);
    }

    /* Empty State */
    .admin-empty-state {
        padding: 3rem;
        text-align: center;
        color: #999;
        font-family: 'Montserrat', sans-serif;
    }

    /* Flash Messages */
    .admin-alert {
        border-radius: 12px;
        border: none;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .admin-page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .admin-page-header .btn-group {
            width: 100%;
            flex-direction: column;
        }

        .admin-table {
            font-size: 0.85rem;
        }

        .admin-table thead th,
        .admin-table tbody td {
            padding: 0.75rem 1rem;
        }

        .admin-action-buttons {
            flex-direction: column;
        }

        .admin-btn {
            width: 100%;
            text-align: center;
        }
    }
</style>

