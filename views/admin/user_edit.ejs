<%- include('../partials/header', { user: user }) %>
<%- include('_shared_styles') %>

<div class="container mt-4">
    <!-- Page Header -->
    <div class="admin-page-header">
        <h1>Edit User</h1>
        <div class="btn-group">
            <a href="/admin/users" class="admin-btn admin-btn-secondary">Back to Users</a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    <% if (messages && messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success admin-alert alert-dismissible fade show" role="alert">
            <%= messages.success[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if (messages && messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger admin-alert alert-dismissible fade show" role="alert">
            <%= messages.error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <!-- Edit Form -->
    <div class="admin-table-card">
        <div class="card-body" style="padding: 2rem;">
            <form action="/admin/users/edit/<%= editUser.participant_id %>" method="POST">
                <div class="mb-3">
                    <label for="participant_email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input type="email" class="form-control admin-select" id="participant_email"
                        name="participant_email" value="<%= editUser.participant_email %>" required>
                </div>
                <div class="mb-3">
                    <label for="participant_first_name" class="form-label">First Name</label>
                    <input type="text" class="form-control admin-select" id="participant_first_name"
                        name="participant_first_name" value="<%= editUser.participant_first_name || '' %>">
                </div>
                <div class="mb-3">
                    <label for="participant_last_name" class="form-label">Last Name</label>
                    <input type="text" class="form-control admin-select" id="participant_last_name"
                        name="participant_last_name" value="<%= editUser.participant_last_name || '' %>">
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="admin-btn admin-btn-primary">Save Changes</button>
                    <a href="/admin/users" class="admin-btn admin-btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

