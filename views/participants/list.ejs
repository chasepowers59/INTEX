<%- include('../partials/header', { user: user }) %>

    <div class="container" style="padding: 2rem 0;">

        <!-- Header & Toolbar -->
        <div class="d-flex justify-content-between align-items-center mb-4" style="flex-wrap: wrap; gap: 1rem;">
            <h2 style="color: var(--col-blue); font-weight: 800; margin: 0;">
                Participants <span class="badge bg-light text-dark" style="font-size: 1rem; vertical-align: middle;">
                    <%= participants.length %>
                </span>
            </h2>

            <% if (user.role==='Manager' ) { %>
                <a href="/participants/add" class="btn btn-success"><i class="fas fa-plus"></i> Add New</a>
                <% } %>
        </div>

        <!-- Compact Filter Toolbar -->
        <div class="card mb-4" style="padding: 1rem;">
            <form action="/participants" method="GET"
                style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">

                <!-- Search -->
                <div style="flex: 2; min-width: 200px;">
                    <input type="text" name="search" class="form-control" placeholder="Search Name or Email..."
                        value="<%= search || '' %>" style="margin: 0;">
                </div>

                <!-- Role -->
                <div style="flex: 1; min-width: 150px;">
                    <select name="role" class="form-control" style="margin: 0;">
                        <option value="">All Roles</option>
                        <% if (options && options.roles) { %>
                            <% options.roles.forEach(r=> { %>
                                <option value="<%= r %>" <%=filters.role===r ? 'selected' : '' %>><%= r %>
                                </option>
                                <% }) %>
                                    <% } %>
                    </select>
                </div>

                <!-- City -->
                <div style="flex: 1; min-width: 150px;">
                    <select name="city" class="form-control" style="margin: 0;">
                        <option value="">All Cities</option>
                        <% if (options && options.cities) { %>
                            <% options.cities.forEach(c=> { %>
                                <option value="<%= c %>" <%=filters.city===c ? 'selected' : '' %>><%= c %>
                                </option>
                                <% }) %>
                                    <% } %>
                    </select>
                </div>

                <!-- Sort -->
                <div style="flex: 1; min-width: 150px;">
                    <select name="sort" class="form-control" style="margin: 0;">
                        <option value="participant_last_name:asc" <%=filters.sort==='participant_last_name:asc'
                            ? 'selected' : '' %>>Name (A-Z)</option>
                        <option value="participant_last_name:desc" <%=filters.sort==='participant_last_name:desc'
                            ? 'selected' : '' %>>Name (Z-A)</option>
                        <option value="participant_city:asc" <%=filters.sort==='participant_city:asc' ? 'selected' : ''
                            %>>City</option>
                    </select>
                </div>

                <!-- Actions -->
                <div style="display: flex; gap: 0.5rem;">
                    <button type="submit" class="btn btn-primary" style="padding: 0.6rem 1.5rem;">Apply</button>
                    <a href="/participants" class="btn btn-outline-secondary"
                        style="padding: 0.6rem 1rem; background: #eee; color: #333;">Clear</a>
                </div>
            </form>
        </div>

        <!-- Data Table -->
        <div class="card" style="padding: 0; overflow: hidden;">
            <% if (participants.length> 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0" style="width: 100%;">
                        <thead style="background-color: #f8f9fa; border-bottom: 2px solid #eee;">
                            <tr>
                                <th style="padding: 1rem; width: 50px;"></th> <!-- Avatar -->
                                <th style="padding: 1rem;">Name</th>
                                <th style="padding: 1rem;">Email</th>
                                <th style="padding: 1rem;">Role</th>
                                <th style="padding: 1rem;">City</th>
                                <th style="padding: 1rem; text-align: right;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% participants.forEach(p=> { %>
                                <tr style="border-bottom: 1px solid #eee; transition: background 0.2s;">
                                    <td style="padding: 1rem; vertical-align: middle;">
                                        <div
                                            style="width: 40px; height: 40px; background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; color: var(--col-blue); font-size: 0.9rem;">
                                            <%= p.participant_first_name.charAt(0) %>
                                                <%= p.participant_last_name.charAt(0) %>
                                        </div>
                                    </td>
                                    <td
                                        style="padding: 1rem; vertical-align: middle; font-weight: 600; color: var(--col-dark-gray);">
                                        <%= p.participant_first_name %>
                                            <%= p.participant_last_name %>
                                    </td>
                                    <td style="padding: 1rem; vertical-align: middle; color: #666;">
                                        <%= p.participant_email %>
                                    </td>
                                    <td style="padding: 1rem; vertical-align: middle;">
                                        <span class="badge"
                                            style="background: var(--col-pink); font-weight: 500; padding: 0.4rem 0.8rem; border-radius: 20px;">
                                            <%= p.participant_role || 'Participant' %>
                                        </span>
                                    </td>
                                    <td style="padding: 1rem; vertical-align: middle; color: #666;">
                                        <%= p.participant_city || '-' %>
                                    </td>
                                    <td style="padding: 1rem; vertical-align: middle; text-align: right;">
                                        <a href="/participants/<%= p.participant_id %>"
                                            class="btn btn-sm btn-outline-primary"
                                            style="padding: 0.4rem 1rem; font-size: 0.85rem;">View Profile</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <div style="font-size: 3rem; color: #ddd; margin-bottom: 1rem;">üîç</div>
                        <h3>No participants found</h3>
                        <p class="text-muted">Try adjusting your filters.</p>
                    </div>
                    <% } %>
        </div>
    </div>

    <style>
        /* Custom Table Styles */
        tr:hover {
            background-color: #fcfcfc !important;
        }

        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(148, 170, 185, 0.2);
            border-color: var(--col-blue);
        }
    </style>

    <%- include('../partials/footer') %>