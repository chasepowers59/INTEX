<%- include('partials/header', { user: user }) %>

<style>
    body {
        background-color: var(--col-cream);
    }

    /* Hero Banner */
    .donation-hero {
        background: linear-gradient(135deg, rgba(255, 209, 199, 0.4) 0%, rgba(148, 170, 185, 0.3) 100%);
        padding: 5rem 0 6rem 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .donation-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url('/img/ER Summer Summit 2022-165.jpg');
        background-size: cover;
        background-position: center;
        opacity: 0.2;
        z-index: 0;
    }

    .donation-hero::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 100%;
        height: 60px;
        background: var(--col-cream);
        clip-path: polygon(0 20%, 5% 15%, 10% 20%, 15% 15%, 20% 20%, 25% 15%, 30% 20%, 35% 15%, 40% 20%, 45% 15%, 50% 20%, 55% 15%, 60% 20%, 65% 15%, 70% 20%, 75% 15%, 80% 20%, 85% 15%, 90% 20%, 95% 15%, 100% 20%, 100% 100%, 0 100%);
        z-index: 1;
    }

    .donation-hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .donation-hero h1 {
        font-family: 'DM Serif Display', serif;
        font-size: clamp(2.5rem, 5vw, 4rem);
        color: var(--col-dark-gray);
        margin-bottom: 1rem;
    }

    .donation-hero p {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.2rem;
        color: var(--col-dark-gray);
        line-height: 1.6;
    }

    /* Main Container */
    .donation-container {
        padding: 4rem 0 6rem 0;
    }

    .donation-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .donation-card {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 3rem;
        background: white;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        margin-top: -3rem;
        position: relative;
        z-index: 2;
    }

    /* Left Side - Impact & Progress */
    .donation-left {
        background: linear-gradient(135deg, var(--col-peach) 0%, var(--col-light-pink) 100%);
        padding: 4rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        overflow: hidden;
    }

    .donation-left::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
        animation: rotate 20s linear infinite;
    }

    @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .donation-left-content {
        position: relative;
        z-index: 2;
    }

    .donation-logo {
        font-family: 'DM Serif Display', serif;
        font-size: 2.5rem;
        letter-spacing: 3px;
        margin-bottom: 2rem;
        color: var(--col-dark-gray);
        text-align: center;
    }

    .impact-stats {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .impact-stat {
        background: white;
        padding: 1.5rem;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .impact-stat:hover {
        transform: translateY(-5px);
    }

    .impact-stat-number {
        font-family: 'DM Serif Display', serif;
        font-size: 2rem;
        color: var(--col-blue);
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .impact-stat-label {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.85rem;
        color: var(--text-light);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .donation-progress {
        background: white;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .progress-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
    }

    .progress-amount {
        font-size: 1.5rem;
        color: var(--col-blue);
        font-family: 'DM Serif Display', serif;
    }

    .progress-goal {
        color: var(--text-light);
        font-size: 0.9rem;
    }

    .progress-bar-container {
        background: #f0f0f0;
        height: 16px;
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .progress-bar {
        background: linear-gradient(90deg, var(--col-green), var(--col-blue));
        height: 100%;
        border-radius: 10px;
        transition: width 0.5s ease;
        box-shadow: 0 2px 10px rgba(148, 170, 185, 0.3);
    }

    .progress-campaign {
        font-family: 'DM Serif Display', serif;
        font-size: 1.3rem;
        color: var(--col-dark-gray);
        margin-bottom: 0.5rem;
    }

    .progress-description {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.95rem;
        color: var(--text-light);
        line-height: 1.5;
    }

    /* Right Side - Form */
    .donation-right {
        padding: 4rem;
    }

    .form-header {
        margin-bottom: 2.5rem;
    }

    .form-header h2 {
        font-family: 'DM Serif Display', serif;
        font-size: 2.5rem;
        color: var(--col-dark-gray);
        margin-bottom: 0.5rem;
    }

    .form-header p {
        font-family: 'Montserrat', sans-serif;
        color: var(--text-light);
        font-size: 1rem;
    }

    .section-title {
        color: var(--col-blue);
        margin-bottom: 1rem;
        font-family: 'DM Serif Display', serif;
        font-size: 1.4rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-title i {
        font-size: 1.2rem;
    }

    .frequency-toggle {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

    .btn-toggle {
        background: #f5f5f5;
        border: 2px solid transparent;
        padding: 0.75rem 1rem;
        font-weight: 600;
        color: #666;
        cursor: pointer;
        border-radius: 12px;
        transition: all 0.3s ease;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
    }

    .btn-toggle.active {
        background: var(--col-blue);
        color: white;
        border-color: var(--col-blue);
        box-shadow: 0 5px 15px rgba(148, 170, 185, 0.3);
    }

    .btn-toggle:hover:not(.active) {
        background: var(--col-light-pink);
        border-color: var(--col-pink);
    }

    .amount-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .btn-amount {
        background: white;
        border: 2px solid #e0e0e0;
        padding: 1.25rem;
        border-radius: 15px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Montserrat', sans-serif;
        color: var(--col-dark-gray);
        font-size: 1.1rem;
    }

    .btn-amount:hover {
        background: var(--col-light-pink);
        border-color: var(--col-pink);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 216, 209, 0.3);
    }

    .btn-amount.selected {
        background: linear-gradient(135deg, var(--col-blue), var(--col-pink));
        color: white;
        border-color: transparent;
        box-shadow: 0 8px 20px rgba(148, 170, 185, 0.4);
        transform: translateY(-2px);
    }

    .custom-amount-input {
        background: #f9f9f9;
        padding: 1.25rem;
        border-radius: 15px;
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

    .custom-amount-input:focus-within {
        border-color: var(--col-blue);
        background: white;
        box-shadow: 0 0 0 4px rgba(148, 170, 185, 0.1);
    }

    .custom-amount-input span {
        color: var(--col-blue);
        margin-right: 1rem;
        font-weight: 700;
        font-family: 'Montserrat', sans-serif;
        font-size: 1.2rem;
    }

    .custom-amount-input input {
        border: none;
        background: transparent;
        width: 100%;
        outline: none;
        text-align: right;
        font-size: 1.3rem;
        font-weight: 700;
        font-family: 'Montserrat', sans-serif;
        color: var(--col-dark-gray);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.75rem;
        color: var(--col-dark-gray);
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.95rem;
    }

    .form-input {
        width: 100%;
        padding: 1rem 1.25rem;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        font-size: 1rem;
        font-family: 'Montserrat', sans-serif;
        transition: all 0.3s ease;
        background: white;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--col-blue);
        box-shadow: 0 0 0 4px rgba(148, 170, 185, 0.1);
    }

    .form-input:read-only {
        background: #f9f9f9;
        cursor: not-allowed;
        color: #666;
    }

    .note-section {
        margin-top: 2.5rem;
        padding-top: 2.5rem;
        border-top: 2px solid #f0f0f0;
    }

    .note-textarea {
        width: 100%;
        padding: 1rem 1.25rem;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        font-size: 1rem;
        font-family: 'Montserrat', sans-serif;
        min-height: 120px;
        resize: vertical;
        transition: all 0.3s ease;
        background: white;
    }

    .note-textarea:focus {
        outline: none;
        border-color: var(--col-blue);
        box-shadow: 0 0 0 4px rgba(148, 170, 185, 0.1);
    }

    .submit-btn {
        width: 100%;
        background: linear-gradient(135deg, var(--col-blue) 0%, var(--col-pink) 100%);
        color: white;
        font-size: 1.3rem;
        padding: 1.5rem;
        margin-top: 2.5rem;
        border: none;
        border-radius: 15px;
        font-weight: 700;
        font-family: 'Montserrat', sans-serif;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(148, 170, 185, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .submit-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(148, 170, 185, 0.4);
    }

    .submit-btn:active {
        transform: translateY(-1px);
    }

    .simulation-notice {
        background: linear-gradient(135deg, rgba(148, 170, 185, 0.1) 0%, rgba(255, 209, 199, 0.1) 100%);
        border-left: 4px solid var(--col-blue);
        padding: 1.25rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.95rem;
        color: var(--col-dark-gray);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .simulation-notice i {
        color: var(--col-blue);
        font-size: 1.2rem;
    }

    .alert {
        padding: 1.25rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
        font-family: 'Montserrat', sans-serif;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    @media (max-width: 968px) {
        .donation-card {
            grid-template-columns: 1fr;
        }

        .donation-left {
            padding: 3rem 2rem;
        }

        .donation-right {
            padding: 3rem 2rem;
        }

        .amount-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .frequency-toggle {
            grid-template-columns: repeat(2, 1fr);
        }

        .impact-stats {
            grid-template-columns: 1fr;
        }
    }
</style>

