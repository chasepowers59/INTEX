                        <label for="donor_email" class="form-label">Email Address *</label>
                        <input type="email" id="donor_email" name="donor_email" 
                            value="<%= user && user.participant_email ? user.participant_email : '' %>"
                            <%= user && user.participant_email ? 'readonly' : '' %>
                            required
