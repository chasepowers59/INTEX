<%- include('partials/header', { user: user }) %>

    <div style="background-color: #D8E2DC; min-height: 90vh; padding: 4rem 0;">
        <div class="container">
            <div
                style="display: flex; gap: 2rem; background: white; border-radius: 20px; overflow: hidden; box-shadow: var(--shadow-soft);">

                <!-- Left Side: Illustration & Progress -->
                <div
                    style="flex: 1; background: var(--col-light-pink); padding: 4rem; text-align: center; display: flex; flex-direction: column; justify-content: center;">
                    <img src="https://images.unsplash.com/photo-1529333166437-7750a6dd5a70?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                        alt="Illustration"
                        style="width: 80%; border-radius: 50%; margin: 0 auto 2rem; border: 5px solid white;">
                    <h2 style="font-family: 'DM Serif Display'; letter-spacing: 5px; margin-bottom: 2rem;">ELLA <span
                            style="font-size: 1.5rem;">â™¡</span> RISES</h2>

                    <div style="text-align: left; background: white; padding: 1.5rem; border-radius: 10px;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                            <strong>$980</strong>
                            <span>0% of $100,000 goal</span>
                        </div>
                        <div style="background: #eee; height: 10px; border-radius: 5px; overflow: hidden;">
                            <div style="background: #9AB59D; width: 1%; height: 100%;"></div>
                        </div>
                        <h3 style="margin-top: 1.5rem; font-size: 1.2rem;">Rise With Ella: Empowering Futures Together
                        </h3>
                        <p style="font-size: 0.9rem; color: #666;">We believe in the power of community and the
                            brilliance of our youth.</p>
                    </div>
                </div>

                <!-- Right Side: Donation Form -->
                <div style="flex: 1; padding: 4rem;">
                    <h3 style="color: #00A86B; margin-bottom: 1rem;"><i class="fas fa-check-circle"></i> Choose amount
                    </h3>

                    <form action="/donate" method="POST">
                        <div
                            style="display: flex; background: #f5f5f5; padding: 0.5rem; border-radius: 10px; margin-bottom: 2rem; justify-content: space-between;">
                            <button type="button" class="btn-toggle active">One-time</button>
                            <button type="button" class="btn-toggle">Monthly</button>
                            <button type="button" class="btn-toggle">Quarterly</button>
                            <button type="button" class="btn-toggle">Yearly</button>
                        </div>

                        <div class="amount-grid"
                            style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; margin-bottom: 1rem;">
                            <button type="button" class="btn-amount" onclick="setAmount(1000)">$1,000</button>
                            <button type="button" class="btn-amount" onclick="setAmount(500)">$500</button>
                            <button type="button" class="btn-amount" onclick="setAmount(250)">$250</button>
                            <button type="button" class="btn-amount" onclick="setAmount(100)">$100</button>
                            <button type="button" class="btn-amount" onclick="setAmount(55)">$55</button>
                            <button type="button" class="btn-amount" onclick="setAmount(25)">$25</button>
                        </div>

                        <div
                            style="background: #f5f5f5; padding: 1rem; border-radius: 10px; display: flex; align-items: center; margin-bottom: 1rem;">
                            <span style="color: #666; margin-right: 1rem;">$ Other</span>
                            <input type="number" name="amount" id="custom-amount"
                                style="border: none; background: transparent; width: 100%; outline: none; text-align: right;"
                                placeholder="USD">
                        </div>

                        <div style="margin-bottom: 2rem;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; color: #666;">
                                <input type="checkbox"> Add note/comment
                            </label>
                        </div>

                        <!-- Donor Information Section -->
                        <h3 style="color: #00A86B; margin-bottom: 1rem; margin-top: 2rem;"><i class="fas fa-user"></i> Donor Information</h3>
                        
                        <div style="margin-bottom: 1rem;">
                            <label for="donor_first_name" style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 600;">First Name</label>
                            <input type="text" id="donor_first_name" name="donor_first_name" 
                                value="<%= user && user.participant_first_name ? user.participant_first_name : '' %>"
                                <%= user && user.participant_first_name ? 'readonly' : '' %>
                                required
                                style="width: 100%; padding: 0.75rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem;">
                        </div>

                        <div style="margin-bottom: 1rem;">
                            <label for="donor_last_name" style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 600;">Last Name</label>
                            <input type="text" id="donor_last_name" name="donor_last_name" 
                                value="<%= user && user.participant_last_name ? user.participant_last_name : '' %>"
                                <%= user && user.participant_last_name ? 'readonly' : '' %>
                                required
                                style="width: 100%; padding: 0.75rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem;">
                        </div>

                        <div style="margin-bottom: 1rem;">
                            <label for="donor_email" style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 600;">Email</label>
                            <input type="email" id="donor_email" name="donor_email" 
                                value="<%= user && user.participant_email ? user.participant_email : '' %>"
                                <%= user && user.participant_email ? 'readonly' : '' %>
                                required
                                style="width: 100%; padding: 0.75rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem;">
                        </div>

                        <!-- Credit Card Section (Visual Only) -->
                        <h3 style="color: #00A86B; margin-bottom: 1rem; margin-top: 2rem;"><i class="fas fa-credit-card"></i> Payment Information</h3>
                        
                        <div style="margin-bottom: 1rem;">
                            <label style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 600;">Card Number</label>
                            <input type="text" placeholder="1234 5678 9012 3456" maxlength="19"
                                style="width: 100%; padding: 0.75rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem;">
                        </div>

                        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 1rem; margin-bottom: 1rem;">
                            <div>
                                <label style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 600;">Expiry Date</label>
                                <input type="text" placeholder="MM/YY" maxlength="5"
                                    style="width: 100%; padding: 0.75rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem;">
                            </div>
                            <div>
                                <label style="display: block; margin-bottom: 0.5rem; color: #666; font-weight: 600;">CVV</label>
                                <input type="text" placeholder="123" maxlength="3"
                                    style="width: 100%; padding: 0.75rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem;">
                            </div>
                        </div>

                        <button type="submit" class="btn"
                            style="width: 100%; background-color: #C8D6C9; color: white; font-size: 1.2rem; padding: 1rem; margin-top: 1rem;">Complete Donation</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function setAmount(val) {
            document.getElementById('custom-amount').value = val;
        }
    </script>

    <style>
        .btn-toggle {
            background: none;
            border: none;
            padding: 0.5rem 1rem;
            font-weight: bold;
            color: #666;
            cursor: pointer;
            border-radius: 5px;
        }

        .btn-toggle.active {
            background: #D8E2DC;
            color: #333;
        }

        .btn-amount {
            background: #f5f5f5;
            border: none;
            padding: 1rem;
            border-radius: 10px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.2s;
        }

        .btn-amount:hover {
            background: #e0e0e0;
        }
    </style>

    <%- include('partials/footer') %>