<%- include('partials/header', { user: user }) %>

    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <h1 class="text-center mb-4">Make a Donation</h1>
        <p class="text-center mb-4">Your support helps us empower more young women.</p>

        <form action="/donate" method="POST">
            <div class="form-group">
                <label for="amount">Donation Amount ($)</label>
                <input type="number" id="amount" name="amount" class="form-control" min="1" step="0.01" required>
            </div>

            <div class="form-group">
                <label for="donor_name">Name (Optional)</label>
                <input type="text" id="donor_name" name="donor_name" class="form-control"
                    placeholder="Leave blank for anonymous">
            </div>

            <div class="form-group">
                <label for="email">Email (Optional)</label>
                <input type="email" id="email" name="email" class="form-control">
            </div>

            <button type="submit" class="btn" style="width: 100%;">Donate Now</button>
        </form>
    </div>

    <%- include('partials/footer') %>