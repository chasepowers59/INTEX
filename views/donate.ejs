<!-- Main Donation Form -->
<div class="donation-container">
    <div class="donation-wrapper">
        <div class="donation-card">
            <!-- Left Side: Impact & Progress -->
            <div class="donation-left">
                <div class="donation-left-content">
                    <div class="donation-logo">ELLA â™¡ RISES</div>
                    
                    <div class="impact-stats">
                        <div class="impact-stat">
                            <div class="impact-stat-number">500+</div>
                            <div class="impact-stat-label">Students</div>
                        </div>
                        <div class="impact-stat">
                            <div class="impact-stat-number">50+</div>
                            <div class="impact-stat-label">Events</div>
                        </div>
                        <div class="impact-stat">
                            <div class="impact-stat-number">100+</div>
                            <div class="impact-stat-label">Volunteers</div>
                        </div>
                        <div class="impact-stat">
                            <div class="impact-stat-number">95%</div>
                            <div class="impact-stat-label">Satisfaction</div>
                        </div>
                    </div>

                    <div class="donation-progress">
                        <div class="progress-header">
                            <span class="progress-amount">$<span id="current-total">0</span></span>
                            <span class="progress-goal">of $100,000 goal</span>
                        </div>
                        <div class="progress-bar-container">
                            <div id="progress-bar" class="progress-bar"></div>
                        </div>
